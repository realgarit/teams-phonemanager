<Window x:Class="teams_phonemanager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:teams_phonemanager"
        xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
        xmlns:converters="clr-namespace:teams_phonemanager.Converters"
        xmlns:views="clr-namespace:teams_phonemanager.Views"
        xmlns:services="clr-namespace:teams_phonemanager.Services"
        mc:Ignorable="d"
        Title="Teams Phone Manager" Height="720" Width="1280"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <materialDesign:ColorZone Mode="PrimaryMid" Grid.Row="0" Padding="16">
            <DockPanel LastChildFill="False">
                <TextBlock Text="Teams Phone Manager" 
                         Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                         VerticalAlignment="Center"/>
                <Button DockPanel.Dock="Right" 
                        Style="{StaticResource MaterialDesignIconButton}" 
                        Command="{Binding ToggleSettingsCommand}"
                        Foreground="White">
                    <materialDesign:PackIcon Kind="Settings" Width="24" Height="24"/>
                </Button>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <materialDesign:Card Grid.Column="0" Margin="16" UniformCornerRadius="8">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,8">
                        <!-- Main Navigation Section -->
                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="Welcome"
                               Height="48"
                               Margin="0,4"
                               Foreground="{DynamicResource MaterialDesignBody}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Home" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Welcome" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="GetStarted"
                               Height="48"
                               Margin="0,4"
                               Foreground="{DynamicResource MaterialDesignBody}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PlayCircle" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Get Started" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Variables Section -->
                        <Separator Margin="16,16,16,8"/>
                        <TextBlock Text="VARIABLES" 
                                 Margin="16,0,16,8" 
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                 FontSize="12"/>

                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="Variables"
                               Height="48"
                               Margin="0,4"
                               Foreground="{DynamicResource MaterialDesignBody}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Variable" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Variables" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Voice Configuration Section -->
                        <Separator Margin="16,16,16,8"/>
                        <TextBlock Text="VOICE CONFIGURATION" 
                                 Margin="16,0,16,8" 
                                 Foreground="{DynamicResource MaterialDesignBodyLight}"
                                 FontSize="12"/>

                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="M365Groups"
                               Height="48"
                               Margin="0,4"
                               Foreground="{DynamicResource MaterialDesignBody}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountGroup" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="M365 Groups" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="CallQueues"
                               Height="48"
                               Margin="0,4"
                               Foreground="{DynamicResource MaterialDesignBody}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Phone" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Call Queues" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="AutoAttendants"
                               Height="48"
                               Margin="0,4"
                               Foreground="{DynamicResource MaterialDesignBody}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PhoneInTalk" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Auto Attendants" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>


                        <Button Style="{StaticResource MaterialDesignFlatButton}" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="Holidays"
                               Height="48"
                               Margin="0,4"
                               Foreground="{DynamicResource MaterialDesignBody}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Calendar" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Holidays" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>

            <!-- Content Area -->
            <Grid Grid.Column="1" Margin="16">
                <ContentControl Content="{Binding CurrentPage}">
                    <ContentControl.ContentTemplateSelector>
                        <converters:PageTemplateSelector>
                            <converters:PageTemplateSelector.WelcomeTemplate>
                                <DataTemplate>
                                    <views:WelcomeView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.WelcomeTemplate>
                            <converters:PageTemplateSelector.GetStartedTemplate>
                                <DataTemplate>
                                    <views:GetStartedView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.GetStartedTemplate>
                            <converters:PageTemplateSelector.VariablesTemplate>
                                <DataTemplate>
                                    <views:VariablesView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.VariablesTemplate>
                            <converters:PageTemplateSelector.M365GroupsTemplate>
                                <DataTemplate>
                                    <views:M365GroupsView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.M365GroupsTemplate>
                            <converters:PageTemplateSelector.CallQueuesTemplate>
                                <DataTemplate>
                                    <views:CallQueuesView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.CallQueuesTemplate>
                            <converters:PageTemplateSelector.AutoAttendantsTemplate>
                                <DataTemplate>
                                    <views:AutoAttendantsView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.AutoAttendantsTemplate>
                            <converters:PageTemplateSelector.HolidaysTemplate>
                                <DataTemplate>
                                    <views:HolidaysView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.HolidaysTemplate>
                        </converters:PageTemplateSelector>
                    </ContentControl.ContentTemplateSelector>
                </ContentControl>
            </Grid>
        </Grid>

        <!-- Bottom Bar -->
        <materialDesign:ColorZone Mode="Standard" Grid.Row="2" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Version -->
                <TextBlock Grid.Column="0" Text="{Binding Version}" VerticalAlignment="Center"/>
                
                <!-- Latest Log Entry - Clickable Log Area -->
                <Button Grid.Column="1" 
                        Command="{Binding ToggleLogDialogCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="16,0"
                        Padding="12,8"
                        HorizontalAlignment="Stretch"
                        ToolTip="Click to view full log">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <materialDesign:PackIcon Grid.Column="0" 
                                               Kind="Console" 
                                               Width="20" 
                                               Height="20"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                 Text="{Binding LatestLogEntry}" 
                                 TextTrimming="CharacterEllipsis" 
                                 VerticalAlignment="Center"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                        <materialDesign:PackIcon Grid.Column="2" 
                                               Kind="ChevronRight" 
                                               Width="16" 
                                               Height="16"
                                               Margin="8,0,0,0"
                                               Opacity="0.6"
                                               VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
                <!-- Copyright -->
                <TextBlock Grid.Column="2" Text="Realgar © 2025. Licensed under the MIT License." VerticalAlignment="Center"/>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Log Viewer Dialog -->
        <materialDesign:DialogHost Grid.RowSpan="3" 
                                   IsOpen="{Binding IsLogDialogOpen}"
                                   DialogOpened="LogDialogHost_DialogOpened">
            <materialDesign:DialogHost.DialogContent>
                <materialDesign:Card Padding="0" Margin="16" MaxWidth="1000" MaxHeight="600">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Dialog Header -->
                        <materialDesign:ColorZone Mode="PrimaryMid" Grid.Row="0" Padding="16">
                            <DockPanel LastChildFill="False">
                                <TextBlock Text="Log Viewer" 
                                         Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                         Foreground="White"
                                         VerticalAlignment="Center"/>
                                <Button DockPanel.Dock="Right" 
                                        Style="{StaticResource MaterialDesignIconButton}" 
                                        Command="{Binding CloseLogDialogCommand}"
                                        Foreground="White">
                                    <materialDesign:PackIcon Kind="Close" Width="24" Height="24"/>
                                </Button>
                            </DockPanel>
                        </materialDesign:ColorZone>
                        
                        <!-- Log Content -->
                        <ScrollViewer x:Name="LogScrollViewer"
                                    Grid.Row="1"
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Auto"
                                    Margin="16">
                            <TextBox x:Name="LogView"
                                   Text="{Binding AllLogEntriesText, Mode=OneWay}"
                                   TextWrapping="NoWrap"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   IsReadOnly="True"
                                   AcceptsReturn="True"
                                   AcceptsTab="True"
                                   BorderThickness="1"
                                   Padding="8"
                                   Background="{DynamicResource MaterialDesignPaper}"
                                   Foreground="{DynamicResource MaterialDesignBody}"
                                   SelectionBrush="{DynamicResource MaterialDesignSelection}"
                                   materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                   TextChanged="LogView_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
                                        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    </Style>
                                </TextBox.Style>
                                <TextBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Select All" 
                                                Command="ApplicationCommands.SelectAll"
                                                CommandTarget="{Binding RelativeSource={RelativeSource AncestorType=TextBox}}">
                                            <MenuItem.Icon>
                                                <materialDesign:PackIcon Kind="SelectAll"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Copy" 
                                                Command="ApplicationCommands.Copy"
                                                CommandTarget="{Binding RelativeSource={RelativeSource AncestorType=TextBox}}">
                                            <MenuItem.Icon>
                                                <materialDesign:PackIcon Kind="ContentCopy"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Clear Log" 
                                                Command="{Binding ClearLogCommand}">
                                            <MenuItem.Icon>
                                                <materialDesign:PackIcon Kind="Delete"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </TextBox.ContextMenu>
                            </TextBox>
                        </ScrollViewer>
                        
                        <!-- Dialog Footer -->
                        <StackPanel Grid.Row="2" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Right"
                                   Margin="16,8,16,16">
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding ClearLogCommand}"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Delete" Margin="0,0,8,0" Width="16" Height="16"/>
                                    <TextBlock Text="Clear Log"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding CloseLogDialogCommand}">
                                <TextBlock Text="Close"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <!-- Settings Flyout -->
        <materialDesign:DrawerHost Grid.RowSpan="3" IsRightDrawerOpen="{Binding IsSettingsOpen}">
            <materialDesign:DrawerHost.RightDrawerContent>
                <StackPanel Width="300" Margin="16">
                    <DockPanel Margin="0,0,0,16">
                        <Button DockPanel.Dock="Right" 
                                Style="{StaticResource MaterialDesignIconButton}" 
                                Command="{Binding CloseSettingsCommand}">
                            <materialDesign:PackIcon Kind="Close"/>
                        </Button>
                        <TextBlock Text="Settings" 
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                                 VerticalAlignment="Center"/>
                    </DockPanel>
                    
                    <DockPanel Margin="0,8">
                        <TextBlock Text="Dark Theme" VerticalAlignment="Center"/>
                        <ToggleButton DockPanel.Dock="Right" 
                                    IsChecked="{Binding IsDarkTheme}"
                                    Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                    </DockPanel>
                </StackPanel>
            </materialDesign:DrawerHost.RightDrawerContent>
        </materialDesign:DrawerHost>
    </Grid>
</Window>
