<UserControl x:Class="teams_phonemanager.Views.CallQueuesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <viewmodels:CallQueuesViewModel/>
    </UserControl.DataContext>

    <materialDesign:Card Margin="32" UniformCornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main Content -->
            <Grid Grid.Row="0" Margin="32,32,32,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Status Message -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="{Binding StatusMessage}"
                             Style="{StaticResource MaterialDesignBody1TextBlock}"
                             Foreground="{DynamicResource PrimaryHueMidBrush}"
                             TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Tab Control -->
                <TabControl Grid.Row="1" Style="{StaticResource MaterialDesignTabControl}">
                    
                    <!-- Resource Accounts Tab -->
                    <TabItem Header="Resource Accounts">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Resource Accounts Actions -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Command="{Binding RetrieveResourceAccountsCommand}"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Refresh" Margin="0,0,8,0"/>
                                        <TextBlock Text="Retrieve Accounts"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="1"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Command="{Binding OpenCreateResourceAccountDialogCommand}"
                                        Background="{DynamicResource SecondaryHueMidBrush}"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="AccountPlus" Margin="0,0,8,0"/>
                                        <TextBlock Text="Create Account"/>
                                    </StackPanel>
                                </Button>

                                <TextBox Grid.Column="2"
                                         Text="{Binding SearchResourceAccountsText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Search resource accounts"/>
                            </Grid>

                            <!-- Resource Accounts List -->
                            <DataGrid Grid.Row="2"
                                      ItemsSource="{Binding ResourceAccountsView}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      materialDesign:DataGridAssist.CellPadding="12,8,12,8"
                                      materialDesign:DataGridAssist.ColumnHeaderPadding="12,8,12,8">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="2*"/>
                                    <DataGridTextColumn Header="UPN" Binding="{Binding UserPrincipalName}" Width="2*"/>
                                    <DataGridTextColumn Header="Identity" Binding="{Binding Identity}" Width="2*"/>
                                    <DataGridTextColumn Header="Usage Location" Binding="{Binding UsageLocation}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <!-- Call Queues Tab -->
                    <TabItem Header="Call Queues">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Call Queues Actions -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Command="{Binding RetrieveCallQueuesCommand}"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Refresh" Margin="0,0,8,0"/>
                                        <TextBlock Text="Retrieve Queues"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="1"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Command="{Binding OpenCreateCallQueueDialogCommand}"
                                        Background="{DynamicResource SecondaryHueMidBrush}"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="PhonePlus" Margin="0,0,8,0"/>
                                        <TextBlock Text="Create Queue"/>
                                    </StackPanel>
                                </Button>

                                <TextBox Grid.Column="2"
                                         Text="{Binding SearchCallQueuesText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Search call queues"/>
                            </Grid>

                            <!-- Call Queues List -->
                            <DataGrid Grid.Row="2"
                                      ItemsSource="{Binding CallQueuesView}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      SelectionMode="Single"
                                      SelectionUnit="FullRow"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      materialDesign:DataGridAssist.CellPadding="12,8,12,8"
                                      materialDesign:DataGridAssist.ColumnHeaderPadding="12,8,12,8">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                                    <DataGridTextColumn Header="Identity" Binding="{Binding Identity}" Width="2*"/>
                                    <DataGridTextColumn Header="Routing Method" Binding="{Binding RoutingMethod}" Width="*"/>
                                    <DataGridTextColumn Header="Agent Alert Time" Binding="{Binding AgentAlertTime}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <!-- Step-by-Step Creation Tab -->
                    <TabItem Header="Step-by-Step Creation">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="16">
                            <StackPanel>
                                <TextBlock Text="Follow these steps in order to create a complete call queue setup:"
                                         Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                         Margin="0,0,0,24"/>

                                <!-- Step 1: Create Resource Account -->
                                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 1: Create Resource Account"
                                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create a resource account for the call queue. This account will handle the call queue functionality."
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                Command="{Binding OpenCreateResourceAccountDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="AccountPlus" Margin="0,0,8,0"/>
                                                <TextBlock Text="Create Resource Account"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Step 2: Update Usage Location -->
                                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 2: Update Usage Location"
                                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Set the usage location for the resource account. This is required for licensing."
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                Command="{Binding OpenUpdateUsageLocationDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="MapMarker" Margin="0,0,8,0"/>
                                                <TextBlock Text="Update Usage Location"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Step 3: Assign License -->
                                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 3: Assign License"
                                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Assign a license to the resource account. This is required for the resource account to function properly."
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                Command="{Binding AssignLicenseCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Certificate" Margin="0,0,8,0"/>
                                                <TextBlock Text="Assign License"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Step 4: Get M365 Group ID -->
                                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 4: Get M365 Group ID"
                                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Retrieve the M365 Group ID from the group name. This is required before creating the call queue."
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                Command="{Binding GetM365GroupIdCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="AccountSearch" Margin="0,0,8,0"/>
                                                <TextBlock Text="Get M365 Group ID"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Step 5: Create Call Queue -->
                                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 5: Create Call Queue"
                                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create the actual call queue with routing settings and distribution lists."
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                Command="{Binding OpenCreateCallQueueDialogCommand}"
                                                HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="PhonePlus" Margin="0,0,8,0"/>
                        <TextBlock Text="Create Call Queue"/>
                    </StackPanel>
                </Button>
                                    </StackPanel>
                                </materialDesign:Card>

                                <!-- Step 6: Associate Resource Account -->
                                <materialDesign:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 6: Associate Resource Account"
                                                 Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Associate the resource account with the call queue to complete the setup."
                                                 Style="{StaticResource MaterialDesignBody2TextBlock}"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                                Command="{Binding OpenAssociateDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Link" Margin="0,0,8,0"/>
                                                <TextBlock Text="Associate Account"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </materialDesign:Card>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- Create Resource Account Dialog -->
            <materialDesign:DialogHost Grid.RowSpan="2" 
                                     IsOpen="{Binding ShowCreateResourceAccountDialog}">
                <materialDesign:DialogHost.DialogContent>
                    <StackPanel Margin="16" MinWidth="400">
                        <TextBlock Text="Create Resource Account"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="UPN:"
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Display Name:"
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountDisplayName}"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="The values are auto-generated from your variables. You can modify them if needed."
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding CloseCreateResourceAccountDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding CreateResourceAccountCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AccountPlus" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create Account"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <!-- Update Usage Location Dialog -->
            <materialDesign:DialogHost Grid.RowSpan="2" 
                                     IsOpen="{Binding ShowUpdateUsageLocationDialog}">
                <materialDesign:DialogHost.DialogContent>
                    <StackPanel Margin="16" MinWidth="400">
                        <TextBlock Text="Update Usage Location"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Resource Account UPN:"
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               IsReadOnly="True"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will update the usage location for the resource account. The value is taken from your variables."
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding CloseUpdateUsageLocationDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding UpdateUsageLocationCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="MapMarker" Margin="0,0,8,0"/>
                                    <TextBlock Text="Update Location"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <!-- Create Call Queue Dialog -->
            <materialDesign:DialogHost Grid.RowSpan="2" 
                                     IsOpen="{Binding ShowCreateCallQueueDialog}">
                <materialDesign:DialogHost.DialogContent>
                    <StackPanel Margin="16" MinWidth="400">
                        <TextBlock Text="Create Call Queue"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Call Queue Name:"
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding CallQueueName}"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="M365 Group ID:"
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding M365GroupId}"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               Margin="0,0,0,8"/>
                        <TextBlock Text="Note: Use 'Get M365 Group ID' button to retrieve the Group ID before creating the call queue."
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="The call queue name is auto-generated from your variables. Use the 'Get M365 Group ID' button to retrieve the Group ID."
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding CloseCreateCallQueueDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding CreateCallQueueCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="PhonePlus" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create Queue"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <!-- Associate Resource Account Dialog -->
            <materialDesign:DialogHost Grid.RowSpan="2" 
                                     IsOpen="{Binding ShowAssociateDialog}">
                <materialDesign:DialogHost.DialogContent>
                    <StackPanel Margin="16" MinWidth="400">
                        <TextBlock Text="Associate Resource Account with Call Queue"
                                 Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Resource Account UPN:"
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Call Queue Name:"
                                 Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding CallQueueName}"
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will associate the resource account with the call queue to complete the setup."
                                 Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Style="{StaticResource MaterialDesignFlatButton}"
                                    Command="{Binding CloseAssociateDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding AssociateResourceAccountWithCallQueueCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Link" Margin="0,0,8,0"/>
                                    <TextBlock Text="Associate"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:DialogHost.DialogContent>
            </materialDesign:DialogHost>

            <!-- Progress Indicator -->
            <Grid Grid.RowSpan="2"
                  Background="{DynamicResource MaterialDesignBackground}"
                  Opacity="0.8"
                  Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                           Value="0"
                           IsIndeterminate="True"
                           Width="50"
                           Height="50"
                           Margin="0,16,0,0"/>
                
                <!-- Waiting Message -->
                <TextBlock Text="{Binding WaitingMessage, TargetNullValue=''}"
                           Style="{StaticResource MaterialDesignBody2TextBlock}"
                           TextWrapping="Wrap"
                           Margin="0,8,0,0"
                           TextAlignment="Center"
                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </Grid>
        </Grid>
    </materialDesign:Card>
</UserControl> 