<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:material="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             x:Class="teams_phonemanager.Views.GetStartedView"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.DataContext>
        <viewmodels:GetStartedViewModel/>
    </UserControl.DataContext>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24">

            <!-- Setup Steps -->
            <TextBlock Text="Setup Steps"
                     Classes="headline5"
                     Margin="0,0,0,16"
                     FontWeight="Bold"/>

            <!-- Step 1: PowerShell Modules -->
            <material:Card Margin="0,0,0,16" CornerRadius="8" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step Number -->
                    <materialIcons:MaterialIcon Kind="Numeric1Box" 
                                           Width="48" 
                                           Height="48"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                    
                    <!-- Step Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Check PowerShell Modules"
                                 Classes="subtitle1"
                                 FontWeight="Bold"
                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Verify that Microsoft Teams and Microsoft Graph PowerShell modules are installed and available."
                                 Classes="body2"
                                 TextWrapping="Wrap"
                                 Opacity="0.87"/>
                    </StackPanel>
                    
                    <!-- Action Button -->
                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <Button Command="{Binding CheckModulesCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                                Classes="raised"
                                Padding="30,15"
                                FontSize="16"
                                FontWeight="Bold"
                                MinWidth="200"
                                Height="50">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="Package" 
                                                       Width="20" 
                                                       Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Check Modules"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </material:Card>

            <!-- Step 2: Teams Connection -->
            <material:Card Margin="0,0,0,16" CornerRadius="8" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step Number -->
                    <materialIcons:MaterialIcon Kind="Numeric2Box" 
                                           Width="48" 
                                           Height="48"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                    
                    <!-- Step Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Connect to Microsoft Teams"
                                 Classes="subtitle1"
                                 FontWeight="Bold"
                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Establish a connection to your Microsoft Teams tenant using PowerShell."
                                 Classes="body2"
                                 TextWrapping="Wrap"
                                 Opacity="0.87"/>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <Button Command="{Binding ConnectTeamsCommand}"
                                IsEnabled="{Binding CanConnectTeams}"
                                Classes="raised"
                                Padding="30,15"
                                FontSize="16"
                                FontWeight="Bold"
                                MinWidth="200"
                                Height="50"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="MicrosoftTeams" 
                                                       Width="20" 
                                                       Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Connect Teams"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding DisconnectTeamsCommand}"
                                IsEnabled="{Binding TeamsConnected}"
                                Classes="raised"
                                Padding="30,15"
                                FontSize="16"
                                FontWeight="Bold"
                                MinWidth="200"
                                Height="50">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="Logout" 
                                                       Width="20" 
                                                       Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Disconnect Teams"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </material:Card>

            <!-- Step 3: Graph Connection -->
            <material:Card Margin="0,0,0,16" CornerRadius="8" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step Number -->
                    <materialIcons:MaterialIcon Kind="Numeric3Box" 
                                           Width="48" 
                                           Height="48"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                    
                    <!-- Step Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Connect to Microsoft Graph"
                                 Classes="subtitle1"
                                 FontWeight="Bold"
                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Establish a connection to Microsoft Graph for managing M365 groups and resources."
                                 Classes="body2"
                                 TextWrapping="Wrap"
                                 Opacity="0.87"/>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <Button Command="{Binding ConnectGraphCommand}"
                                IsEnabled="{Binding CanConnectGraph}"
                                Classes="raised"
                                Padding="30,15"
                                FontSize="16"
                                FontWeight="Bold"
                                MinWidth="200"
                                Height="50"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="MicrosoftAzure" 
                                                       Width="20" 
                                                       Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Connect Graph"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding DisconnectGraphCommand}"
                                IsEnabled="{Binding GraphConnected}"
                                Classes="raised"
                                Padding="30,15"
                                FontSize="16"
                                FontWeight="Bold"
                                MinWidth="200"
                                Height="50">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="Logout" 
                                                       Width="20" 
                                                       Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Disconnect Graph"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </material:Card>

            <!-- Proceed Section -->
            <material:Card Margin="0,24,0,0" CornerRadius="12" Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                        <materialIcons:MaterialIcon Kind="CheckCircle" 
                                               Width="48" 
                                               Height="48"
                                               Margin="0,0,16,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Ready to Continue"
                                     Classes="subtitle1"
                                     FontWeight="Bold"/>
                            <TextBlock Text="All prerequisites completed"
                                     Classes="caption"
                                     Opacity="0.7"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock Text="Once all connections are established, you can proceed to configure your phone system variables."
                             Classes="body1"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Opacity="0.87"
                             Margin="0,0,0,24"/>
                    
                    <Button Command="{Binding NavigateToPageCommand}"
                            CommandParameter="Variables"
                            IsEnabled="{Binding CanProceed}"
                            HorizontalAlignment="Center"
                            Classes="raised"
                            Padding="30,15"
                            FontSize="16"
                            FontWeight="Bold"
                            MinWidth="200"
                            Height="50">
                        <StackPanel Orientation="Horizontal">
                            <materialIcons:MaterialIcon Kind="ArrowRight" 
                                                   Width="20" 
                                                   Height="20"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="Proceed to Variables"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </material:Card>

            <!-- Progress Indicator -->
            <material:Card Margin="0,24,0,0" 
                           CornerRadius="8" 
                           Padding="16"
                           IsVisible="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True"
                               Classes="circular"
                               Width="24"
                               Height="24"
                               Margin="0,0,16,0"/>
                    <TextBlock Text="Processing..."
                             Classes="subtitle2"
                             VerticalAlignment="Center"/>
                </StackPanel>
            </material:Card>
        </StackPanel>
    </ScrollViewer>
</UserControl>

