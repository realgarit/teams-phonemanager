<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fi="using:FluentIcons.Avalonia"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             xmlns:converters="clr-namespace:teams_phonemanager.Converters"
             x:Class="teams_phonemanager.Views.GetStartedView"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    
    <UserControl.DataContext>
        <viewmodels:GetStartedViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" Padding="0,0,0,32">
        <StackPanel Margin="32" MaxWidth="850" HorizontalAlignment="Center" Spacing="24">

            <!-- Header Section -->
            <StackPanel Spacing="8" Margin="0,0,0,16">
                <TextBlock Text="Setup Steps"
                         FontSize="32"
                         FontWeight="SemiBold"/>
                <TextBlock Text="Follow these steps to connect to your Microsoft 365 environment and configure the phone manager."
                         FontSize="16"
                         Opacity="0.7"
                         TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Step 1: PowerShell Modules -->
            <Border Classes="card">
                <Grid ColumnDefinitions="Auto,*,Auto" Margin="8">
                    <!-- Step Indicator -->
                    <Panel Grid.Column="0" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,24,0">
                        <!-- Pending State: Ring with Number -->
                        <Border CornerRadius="16" 
                                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                BorderThickness="2"
                                IsVisible="{Binding !ModulesChecked}">
                            <TextBlock Text="1" 
                                     FontSize="18" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                        <!-- Completed State: Clean Icon -->
                        <fi:SymbolIcon Symbol="CheckmarkCircle" 
                                     FontSize="28"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource SystemFillColorSuccessBrush}"
                                     IsVisible="{Binding ModulesChecked}"/>
                    </Panel>
                    
                    <!-- Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="6">
                        <TextBlock Text="Check PowerShell Modules"
                                 FontSize="18"
                                 FontWeight="SemiBold"/>
                        <TextBlock Text="Verify that Microsoft Teams and Microsoft Graph PowerShell modules are installed."
                                 FontSize="14"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <!-- Action -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="24,0,0,0">
                        <Button Command="{Binding CheckModulesCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                                Classes="IconText"
                                MinWidth="160">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon Symbol="BoxToolbox"/>
                                <TextBlock Text="Check Modules" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Step 2: Teams Connection -->
            <Border Classes="card">
                <Grid ColumnDefinitions="Auto,*,Auto" Margin="8">
                    <!-- Step Indicator -->
                    <Panel Grid.Column="0" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,24,0">
                        <Border CornerRadius="16" 
                                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                BorderThickness="2"
                                IsVisible="{Binding !TeamsConnected}">
                            <TextBlock Text="2" 
                                     FontSize="18" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                        <fi:SymbolIcon Symbol="CheckmarkCircle" 
                                     FontSize="28"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource SystemFillColorSuccessBrush}"
                                     IsVisible="{Binding TeamsConnected}"/>
                    </Panel>
                    
                    <!-- Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="6">
                        <TextBlock Text="Connect to Microsoft Teams"
                                 FontSize="18"
                                 FontWeight="SemiBold"/>
                        <TextBlock Text="Establish a secure connection to your Microsoft Teams tenant."
                                 FontSize="14"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <!-- Action -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="24,0,0,0">
                        <Button Command="{Binding ConnectTeamsCommand}"
                                IsVisible="{Binding !TeamsConnected}"
                                IsEnabled="{Binding CanConnectTeams}"
                                Classes="IconText"
                                MinWidth="160">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon Symbol="Person"/>
                                <TextBlock Text="Connect" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding DisconnectTeamsCommand}"
                                IsVisible="{Binding TeamsConnected}"
                                Classes="IconText"
                                Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                                MinWidth="160">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon Symbol="SignOut"/>
                                <TextBlock Text="Disconnect" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Step 3: Graph Connection -->
            <Border Classes="card">
                <Grid ColumnDefinitions="Auto,*,Auto" Margin="8">
                    <!-- Step Indicator -->
                    <Panel Grid.Column="0" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,24,0">
                        <Border CornerRadius="16" 
                                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                BorderThickness="2"
                                IsVisible="{Binding !GraphConnected}">
                            <TextBlock Text="3" 
                                     FontSize="18" 
                                     FontWeight="Bold"
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"/>
                        </Border>
                        <fi:SymbolIcon Symbol="CheckmarkCircle" 
                                     FontSize="28"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource SystemFillColorSuccessBrush}"
                                     IsVisible="{Binding GraphConnected}"/>
                    </Panel>
                    
                    <!-- Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="6">
                        <TextBlock Text="Connect to Microsoft Graph"
                                 FontSize="18"
                                 FontWeight="SemiBold"/>
                        <TextBlock Text="Connect to Microsoft Graph to manage M365 groups and resources."
                                 FontSize="14"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"/>
                    </StackPanel>
                    
                    <!-- Action -->
                    <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="24,0,0,0">
                         <Button Command="{Binding ConnectGraphCommand}"
                                IsVisible="{Binding !GraphConnected}"
                                IsEnabled="{Binding CanConnectGraph}"
                                Classes="IconText"
                                MinWidth="160">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon Symbol="Cloud"/>
                                <TextBlock Text="Connect" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding DisconnectGraphCommand}"
                                IsVisible="{Binding GraphConnected}"
                                Classes="IconText"
                                Foreground="{DynamicResource SystemFillColorCriticalBrush}"
                                MinWidth="160">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon Symbol="SignOut"/>
                                <TextBlock Text="Disconnect" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Proceed Section -->
            <Border Classes="card" 
                    Background="{DynamicResource SolidBackgroundFillColorTertiaryBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    Margin="0,16,0,0"
                    IsVisible="{Binding CanProceed}">
                <Grid ColumnDefinitions="*,Auto" Margin="8">
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Spacing="4">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <fi:SymbolIcon Symbol="CheckmarkCircle" Foreground="{DynamicResource SystemFillColorSuccessBrush}" FontSize="24"/>
                            <TextBlock Text="All Systems Ready"
                                     FontSize="18"
                                     FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBlock Text="You have successfully connected to all required services."
                                 FontSize="14"
                                 Opacity="0.7"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1"
                            Command="{Binding NavigateToPageCommand}"
                            CommandParameter="Variables"
                            Classes="Accent IconTextLarge"
                            FontWeight="Bold"
                            MinWidth="200">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="Start Configuration" VerticalAlignment="Center"/>
                            <fi:SymbolIcon Symbol="ArrowRight"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Loading Indicator -->
             <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Spacing="12"
                        IsVisible="{Binding IsBusy}">
                <ProgressBar IsIndeterminate="True" Width="20" Height="20"/>
                <TextBlock Text="Processing..." Opacity="0.7"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
