<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fi="using:FluentIcons.Avalonia"
             xmlns:fic="using:FluentIcons.Common"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             xmlns:converters="clr-namespace:teams_phonemanager.Converters"
             x:Class="teams_phonemanager.Views.GetStartedView"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.DataContext>
        <viewmodels:GetStartedViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Local styles removed, using App.axaml styles -->
    </UserControl.Styles>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24">

            <!-- Setup Steps -->
            <TextBlock Text="Setup Steps"
                     FontSize="24"
                     Margin="0,0,0,16"
                     FontWeight="Bold"/>

            <!-- Step 1: PowerShell Modules -->
            <Border Classes="card" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step Number -->
                    <Border Width="48" Height="48" 
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            CornerRadius="24"
                            VerticalAlignment="Center"
                            Margin="0,0,16,0">
                        <TextBlock Text="1" 
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </Border>
                    
                    <!-- Step Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Check PowerShell Modules"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Verify that Microsoft Teams and Microsoft Graph PowerShell modules are installed and available."
                                 FontSize="14"
                                 TextWrapping="Wrap"
                                 Opacity="0.87"/>
                    </StackPanel>
                    
                    <!-- Action Button -->
                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <Button Command="{Binding CheckModulesCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                                Classes="IconTextLarge"
                                FontWeight="Bold"
                                MinWidth="200">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon 
                                         Symbol="Box"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                         />
                                <TextBlock Text="Check Modules" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Step 2: Teams Connection -->
            <Border Classes="card" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step Number -->
                    <Border Width="48" Height="48" 
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            CornerRadius="24"
                            VerticalAlignment="Center"
                            Margin="0,0,16,0">
                        <TextBlock Text="2" 
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </Border>
                    
                    <!-- Step Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Connect to Microsoft Teams"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Establish a connection to your Microsoft Teams tenant using PowerShell."
                                 FontSize="14"
                                 TextWrapping="Wrap"
                                 Opacity="0.87"/>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <Button Command="{Binding ConnectTeamsCommand}"
                                IsEnabled="{Binding CanConnectTeams}"
                                
                                
                                FontWeight="Bold"
                                MinWidth="200"
                                
                                Margin="0,0,0,8" Classes="IconTextLarge">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon 
                                         Symbol="PeopleTeam"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                         />
                                <TextBlock Text="Connect Teams" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding DisconnectTeamsCommand}"
                                IsEnabled="{Binding TeamsConnected}"
                                
                                
                                FontWeight="Bold"
                                MinWidth="200"
                                 Classes="IconTextLarge">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon 
                                         Symbol="SignOut"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                         />
                                <TextBlock Text="Disconnect Teams" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Step 3: Graph Connection -->
            <Border Classes="card" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Step Number -->
                    <Border Width="48" Height="48" 
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            CornerRadius="24"
                            VerticalAlignment="Center"
                            Margin="0,0,16,0">
                        <TextBlock Text="3" 
                                 FontSize="24" 
                                 FontWeight="Bold"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </Border>
                    
                    <!-- Step Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Connect to Microsoft Graph"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Establish a connection to Microsoft Graph for managing M365 groups and resources."
                                 FontSize="14"
                                 TextWrapping="Wrap"
                                 Opacity="0.87"/>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <Button Command="{Binding ConnectGraphCommand}"
                                IsEnabled="{Binding CanConnectGraph}"
                                
                                
                                FontWeight="Bold"
                                MinWidth="200"
                                
                                Margin="0,0,0,8" Classes="IconTextLarge">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon 
                                         Symbol="Cloud"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                         />
                                <TextBlock Text="Connect Graph" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                        <Button Command="{Binding DisconnectGraphCommand}"
                                IsEnabled="{Binding GraphConnected}"
                                
                                
                                FontWeight="Bold"
                                MinWidth="200"
                                 Classes="IconTextLarge">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon 
                                         Symbol="SignOut"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                         />
                                <TextBlock Text="Disconnect Graph" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Proceed Section -->
            <Border Classes="card" Margin="0,24,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                        <fi:SymbolIcon FontSize="28"
                                 Symbol="CheckmarkCircle"
                                 Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                 />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Ready to Continue"
                                     FontSize="18"
                                     FontWeight="Bold"/>
                            <TextBlock Text="All prerequisites completed"
                                     FontSize="12"
                                     Opacity="0.7"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock Text="Once all connections are established, you can proceed to configure your phone system variables."
                             FontSize="14"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Opacity="0.87"
                             Margin="0,0,0,24"/>
                    
                    <Button Command="{Binding NavigateToPageCommand}"
                            CommandParameter="Variables"
                            IsEnabled="{Binding CanProceed}"
                            HorizontalAlignment="Center"
                            
                            
                            FontWeight="Bold"
                            MinWidth="200"
                             Classes="IconTextLarge">
                        <StackPanel Orientation="Horizontal">
                            <fi:SymbolIcon 
                                         Symbol="ArrowRight"
                                         Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                         />
                                <TextBlock Text="Proceed to Variables" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                </StackPanel>
            </Border>

            <!-- Progress Indicator -->
            <Border Classes="card" 
                   Margin="0,24,0,0" 
                   IsVisible="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True"
                               Width="24"
                               Height="24"
                               Margin="0,0,16,0"/>
                    <TextBlock Text="Processing..."
                             
                             VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
