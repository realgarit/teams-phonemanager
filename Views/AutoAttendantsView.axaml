<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fi="using:FluentIcons.Avalonia"
             xmlns:fic="using:FluentIcons.Common"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             xmlns:converters="clr-namespace:teams_phonemanager.Converters"
             x:Class="teams_phonemanager.Views.AutoAttendantsView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <viewmodels:AutoAttendantsViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Border.card">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
        <Style Selector="Border.dialog">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
    </UserControl.Styles>

    <Grid>
    <Border Classes="card" Margin="32">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main Content -->
            <Grid Grid.Row="0" Margin="32,32,32,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Status Message -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="{Binding StatusMessage}"
                             FontSize="14"
                             TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Tab Control -->
                <TabControl Grid.Row="1" >
                    
                    <!-- Resource Accounts Tab -->
                    <TabItem Header="Resource Accounts">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Resource Accounts Actions -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Command="{Binding RetrieveResourceAccountsCommand}"
                                        Height="40"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <fi:SymbolIcon Symbol="{x:Static fic:Symbol.ArrowSync}" FontSize="20" Margin="0,0,8,0"/>
                                        <TextBlock Text="Retrieve Accounts"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="1"
                                        Command="{Binding OpenCreateResourceAccountDialogCommand}"
                                        Height="40"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <fi:SymbolIcon Symbol="{x:Static fic:Symbol.PersonAdd}" FontSize="20" Margin="0,0,8,0"/>
                                        <TextBlock Text="Create Account"/>
                                    </StackPanel>
                                </Button>

                                <TextBox Grid.Column="2"
                                         Text="{Binding SearchResourceAccountsText}"
                                         Watermark="Search resource accounts..."/>
                            </Grid>

                            <!-- Resource Accounts List -->
                            <DataGrid Grid.Row="2"
                                      ItemsSource="{Binding ResourceAccountsView}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      
                                      
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      SelectionMode="Single"
                                      
                                      HorizontalScrollBarVisibility="Auto"
                                      
                                      >
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="2*"/>
                                    <DataGridTextColumn Header="UPN" Binding="{Binding UserPrincipalName}" Width="2*"/>
                                    <DataGridTextColumn Header="Identity" Binding="{Binding Identity}" Width="2*"/>
                                    <DataGridTextColumn Header="Usage Location" Binding="{Binding UsageLocation}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <!-- Auto Attendants Tab -->
                    <TabItem Header="Auto Attendants">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Auto Attendants Actions -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Command="{Binding RetrieveAutoAttendantsCommand}"
                                        Height="40"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <fi:SymbolIcon Symbol="{x:Static fic:Symbol.ArrowSync}" FontSize="20" Margin="0,0,8,0"/>
                                        <TextBlock Text="Retrieve Auto Attendants"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="1"
                                        Command="{Binding OpenCreateAutoAttendantDialogCommand}"
                                        Height="40"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <fi:SymbolIcon Symbol="{x:Static fic:Symbol.CallInbound}" FontSize="20" Margin="0,0,8,0"/>
                                        <TextBlock Text="Create Auto Attendant"/>
                                    </StackPanel>
                                </Button>

                                <TextBox Grid.Column="2"
                                         Text="{Binding SearchAutoAttendantsText}"
                                         Watermark="Search auto attendants..."/>
                            </Grid>

                            <!-- Auto Attendants List -->
                            <DataGrid Grid.Row="2"
                                      ItemsSource="{Binding AutoAttendantsView}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      
                                      
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      SelectionMode="Single"
                                      
                                      HorizontalScrollBarVisibility="Auto"
                                      
                                      >
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                                    <DataGridTextColumn Header="Identity" Binding="{Binding Identity}" Width="2*"/>
                                    <DataGridTextColumn Header="Language ID" Binding="{Binding LanguageId}" Width="*"/>
                                    <DataGridTextColumn Header="Time Zone ID" Binding="{Binding TimeZoneId}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <!-- Step-by-Step Creation Tab -->
                    <TabItem Header="Step-by-Step Creation">
                        <ScrollViewer Margin="16">
                            <StackPanel>
                                <TextBlock Text="Follow these steps in order to create a complete auto attendant setup:"
                                         FontSize="18"
                                 FontWeight="SemiBold"
                                         Margin="0,0,0,24"/>

                                <!-- Step 1: Create Resource Account -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 1: Create Resource Account"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create a resource account for the auto attendant. This account will handle the auto attendant functionality."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenCreateResourceAccountDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.PersonAdd}" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Create Resource Account"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 2: Update Usage Location -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 2: Update Usage Location"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Set the usage location for the resource account. This is required for licensing."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenUpdateUsageLocationDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Location}" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Update Usage Location"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 3: Assign License -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 3: Assign License"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Assign a license to the resource account. This is required for the resource account to function properly."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding AssignLicenseCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Certificate}" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Assign License"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 4: Validate Call Queue Resource Account -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 4: Validate Call Queue Resource Account"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Validate that the Call Queue resource account exists and can be used as the call target for the auto attendant."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenValidateCallQueueDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Person}" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Validate Call Queue Account"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 5: Create Call Target -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 5: Create Call Target"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create the callable entity that will be used as the call target for the auto attendant."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenCreateCallTargetDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.PersonArrowRight}" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Create Call Target"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 6: Create Default Call Flow -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 6: Create Default Call Flow"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create the default call flow with menu options for the auto attendant."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenCreateDefaultCallFlowDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.CallForward}" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Create Default Call Flow"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 7: Create After Hours Call Flow -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 7: Create After Hours Call Flow"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create the after hours call flow with disconnect option."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenCreateAfterHoursCallFlowDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.CallEnd}" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Create After Hours Call Flow"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 8: Create After Hours Schedule -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 8: Create After Hours Schedule"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create the schedule that defines when the after hours call flow should be active."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenCreateAfterHoursScheduleDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Clock}" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Create After Hours Schedule"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 9: Create Call Handling Association -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 9: Create Call Handling Association"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Associate the after hours schedule with the after hours call flow."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenCreateCallHandlingAssociationDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Link}" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Create Call Handling Association"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 10: Create Auto Attendant -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 10: Create Auto Attendant"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create the actual auto attendant with all the configured call flows and associations."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenCreateAutoAttendantDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.CallInbound}" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Create Auto Attendant"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 11: Associate Resource Account -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 11: Associate Resource Account"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Associate the resource account with the auto attendant to complete the setup."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenAssociateDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Link}" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Associate Account"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- Progress Bar -->
            <ProgressBar Grid.Row="1" 
                         IsIndeterminate="{Binding IsBusy}"
                         IsVisible="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                         Height="4"
                         Margin="32,0,32,16"/>
        </Grid>
    </Border>

            <!-- Create Resource Account Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateResourceAccountDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateResourceAccountBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateResourceAccountCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create Resource Account"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="UPN:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Display Name:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountDisplayName}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="The values are auto-generated from your variables. You can modify them if needed."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Background="Transparent"
                                    Command="{Binding CloseCreateResourceAccountDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button
                                    Command="{Binding CreateResourceAccountCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.PersonAdd}" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create Account"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Update Usage Location Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowUpdateUsageLocationDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="UpdateUsageLocationBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="UpdateUsageLocationCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Update Usage Location"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Resource Account UPN:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                               IsReadOnly="True"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will update the usage location for the resource account. The value is taken from your variables."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Background="Transparent"
                                    Command="{Binding CloseUpdateUsageLocationDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button
                                    Command="{Binding UpdateUsageLocationCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Location}" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Update Location"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Create Auto Attendant Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateAutoAttendantDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateAutoAttendantBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateAutoAttendantCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create Auto Attendant"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Auto Attendant Name:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding AutoAttendantName}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="The auto attendant name is auto-generated from your variables. Make sure to validate the Call Queue resource account before creating the auto attendant."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Background="Transparent"
                                    Command="{Binding CloseCreateAutoAttendantDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button
                                    Command="{Binding CreateAutoAttendantCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.CallInbound}" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create Auto Attendant"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Associate Resource Account Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowAssociateDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="AssociateResourceAccountBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="AssociateResourceAccountCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Associate Resource Account with Auto Attendant"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Resource Account UPN:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Auto Attendant Name:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding AutoAttendantName}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will associate the resource account with the auto attendant to complete the setup."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Background="Transparent"
                                    Command="{Binding CloseAssociateDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button
                                    Command="{Binding AssociateResourceAccountWithAutoAttendantCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Link}" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Associate"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Validate Call Queue Resource Account Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowValidateCallQueueDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="ValidateCallQueueBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="ValidateCallQueueCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Validate Call Queue Resource Account"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Call Queue Resource Account UPN:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding CallQueueUpn}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will validate that the Call Queue resource account exists and can be used as the call target for the auto attendant. The value is auto-generated from your variables, but you can modify it if needed."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Background="Transparent"
                                    Command="{Binding CloseValidateCallQueueDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button
                                    Command="{Binding ValidateCallQueueResourceAccountCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Person}" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Validate Account"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Create Call Target Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateCallTargetDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateCallTargetBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateCallTargetCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create Call Target"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will create the callable entity that will be used as the call target for the auto attendant."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Background="Transparent"
                                    Command="{Binding CloseCreateCallTargetDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button
                                    Command="{Binding CreateCallTargetCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.PersonArrowRight}" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create Call Target"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Create Default Call Flow Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateDefaultCallFlowDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateDefaultCallFlowBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateDefaultCallFlowCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create Default Call Flow"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will create the default call flow with menu options for the auto attendant."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Background="Transparent"
                                    Command="{Binding CloseCreateDefaultCallFlowDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button
                                    Command="{Binding CreateDefaultCallFlowCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.CallForward}" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create Default Call Flow"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Create After Hours Call Flow Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateAfterHoursCallFlowDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateAfterHoursCallFlowBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateAfterHoursCallFlowCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create After Hours Call Flow"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will create the after hours call flow with disconnect option."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Background="Transparent"
                                    Command="{Binding CloseCreateAfterHoursCallFlowDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button
                                    Command="{Binding CreateAfterHoursCallFlowCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.CallEnd}" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create After Hours Call Flow"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Create After Hours Schedule Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateAfterHoursScheduleDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateAfterHoursScheduleBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateAfterHoursScheduleCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create After Hours Schedule"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will create the schedule that defines when the after hours call flow should be active."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Background="Transparent"
                                    Command="{Binding CloseCreateAfterHoursScheduleDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button
                                    Command="{Binding CreateAfterHoursScheduleCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Clock}" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create After Hours Schedule"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Create Call Handling Association Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateCallHandlingAssociationDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateCallHandlingAssociationBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateCallHandlingAssociationCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create Call Handling Association"
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will associate the after hours schedule with the after hours call flow."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Background="Transparent"
                                    Command="{Binding CloseCreateCallHandlingAssociationDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button
                                    Command="{Binding CreateCallHandlingAssociationCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Link}" FontSize="20" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create Call Handling Association"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Progress Indicator -->
            <Grid Opacity="0.8"
                  IsVisible="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar
                           Value="0"
                           IsIndeterminate="True"
                           Width="50"
                           Height="50"
                           Margin="0,16,0,0"/>
                
                <!-- Waiting Message -->
                <TextBlock Text="{Binding WaitingMessage, TargetNullValue=''}"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Margin="0,8,0,0"
                           TextAlignment="Center"/>
            </Grid>
    </Grid>
</UserControl> 