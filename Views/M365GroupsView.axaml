<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:material="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:materialStyles="clr-namespace:Material.Styles;assembly=Material.Styles"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             x:Class="teams_phonemanager.Views.M365GroupsView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <viewmodels:M365GroupsViewModel/>
    </UserControl.DataContext>

    <material:Card Margin="32" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main Content -->
            <Grid Grid.Row="0" Margin="32,32,32,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Group Status -->
                <StackPanel Grid.Row="0" Margin="0,16">
                    <TextBlock Text="Group Status"
                             Classes="subtitle1"
                             Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding GroupStatus}"
                             Classes="body1"
                             Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding GroupId, StringFormat='Group ID: {0}'}"
                             Classes="body2"
                             IsVisible="{Binding IsGroupChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Action + Search -->
                <Grid Grid.Row="1" Margin="0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Classes="raised"
                            Command="{Binding RetrieveM365GroupsCommand}"
                            Height="40"
                            Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialIcons:MaterialIcon Kind="Refresh" Margin="0,0,8,0"/>
                            <TextBlock Text="Retrieve Groups"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Grid.Column="1"
                            Classes="raised"
                            Command="{Binding OpenCreateGroupDialogCommand}"
                            Height="40"
                            Margin="0,0,16,0">
                        <StackPanel Orientation="Horizontal">
                            <materialIcons:MaterialIcon Kind="Plus" Margin="0,0,8,0"/>
                            <TextBlock Text="Create New Group"/>
                        </StackPanel>
                    </Button>

                    <TextBox Grid.Column="2"
                             Text="{Binding SearchText}"
                             Classes="outlined"
                             Watermark="Search groups..."/>
                </Grid>

                <!-- Groups List -->
                <DataGrid Grid.Row="2" 
                          Margin="0,16" 
                          ItemsSource="{Binding GroupsView}"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          
                          
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          SelectionMode="Single"
                          
                          HorizontalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="2*"/>
                        <DataGridTextColumn Header="Mail Nickname" Binding="{Binding MailNickname}" Width="*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>

            <!-- Confirmation Dialog -->
            <!-- Confirm Variables Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowConfirmation}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="ConfirmVariablesBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="ConfirmVariablesCard_PointerPressed">
                    <material:Card Padding="16" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Confirm Variables"
                                 Classes="headline6"
                                 Margin="0,0,0,16"/>
                        <TextBlock Text="Please confirm that you have set up all required variables in the Variables page before proceeding."
                                 Classes="body1"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Classes="raised"
                                    Command="{Binding NavigateToVariablesPageCommand}"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="Variable" Margin="0,0,8,0"/>
                                    <TextBlock Text="Go to Variables"/>
                                </StackPanel>
                            </Button>
                            <Button Classes="raised"
                                    Command="{Binding CheckM365GroupCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="Check" Margin="0,0,8,0"/>
                                    <TextBlock Text="Continue"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </material:Card>
                </Grid>
            </Border>

            <!-- Create Group Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateGroupDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateGroupBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateGroupCard_PointerPressed">
                    <material:Card Padding="16" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create New M365 Group"
                                 Classes="headline6"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Group Name:"
                                 Classes="subtitle2"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewGroupName}"
                                 Classes="outlined"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Description (Optional):"
                                 Classes="subtitle2"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewGroupDescription}"
                                 Classes="outlined"
                               AcceptsReturn="True"
                               TextWrapping="Wrap"
                               Height="60"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="The group name is auto-generated from your variables. You can modify it if needed."
                                 Classes="caption"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Classes="flat"
                                    Command="{Binding CloseCreateGroupDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button Classes="raised"
                                    Command="{Binding CreateNewGroupCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="Plus" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create Group"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </material:Card>
                </Grid>
            </Border>

            <!-- Progress Indicator -->
            <Grid 
                  Opacity="0.8"
                  IsVisible="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Classes="circular"
                           Value="0"
                           IsIndeterminate="True"/>
            </Grid>
        </Grid>
    </material:Card>
</UserControl>

