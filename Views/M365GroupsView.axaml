<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fi="using:FluentIcons.Avalonia"
             xmlns:fic="using:FluentIcons.Common"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             xmlns:converters="clr-namespace:teams_phonemanager.Converters"
             x:Class="teams_phonemanager.Views.M365GroupsView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <!-- DataContext is set via data binding from MainWindow -->

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Local styles removed, using App.axaml styles -->
    </UserControl.Styles>

    <Border Classes="card" Margin="24">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main Content -->
            <Grid Grid.Row="0" Margin="32,32,32,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Group Status -->
                <StackPanel Grid.Row="0" Margin="0,16">
                    <TextBlock Text="Group Status"
                             FontSize="18"
                             FontWeight="SemiBold"
                             Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding GroupStatus}"
                             FontSize="14"
                             Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding GroupId, StringFormat='Group ID: {0}'}"
                             FontSize="12"
                             IsVisible="{Binding IsGroupChecked, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>

                <!-- Action + Search -->
                <Grid Grid.Row="1" Margin="0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Command="{Binding RetrieveM365GroupsCommand}"
                            
                            Margin="0,0,16,0" Classes="IconText">
                        <StackPanel Orientation="Horizontal">
                            <fi:SymbolIcon  Symbol="ArrowSync" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Retrieve Groups" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Grid.Column="1"
                            Command="{Binding OpenCreateGroupDialogCommand}"
                            
                            Margin="0,0,16,0" Classes="IconText">
                        <StackPanel Orientation="Horizontal">
                            <fi:SymbolIcon  Symbol="Add" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Create New Group" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBox Grid.Column="2"
                             Text="{Binding SearchText}"
                             Watermark="Search groups..."/>
                </Grid>

                <!-- Groups List -->
                <DataGrid Grid.Row="2" 
                          Margin="0,16" 
                          ItemsSource="{Binding GroupsView}"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          IsReadOnly="True"
                          GridLinesVisibility="None"
                          SelectionMode="Single"
                          HorizontalScrollBarVisibility="Auto">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="2*"/>
                        <DataGridTextColumn Header="Mail Nickname" Binding="{Binding MailNickname}" Width="*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>

            <!-- Confirmation Dialog -->
            <!-- Confirm Variables Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowConfirmation}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="ConfirmVariablesBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="ConfirmVariablesCard_PointerPressed">
                    <Border Classes="dialog" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Confirm Variables"
                                 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        <TextBlock Text="Please confirm that you have set up all required variables in the Variables page before proceeding."
                                 FontSize="14"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Command="{Binding NavigateToVariablesPageCommand}"
                                     Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon  Symbol="Code" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Go to Variables" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding CheckM365GroupCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon  Symbol="Checkmark" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Continue" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Create Group Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateGroupDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateGroupBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateGroupCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create New M365 Group"
                                 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Group Name:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewGroupName}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Description (Optional):"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding NewGroupDescription}"
                               AcceptsReturn="True"
                               TextWrapping="Wrap"
                               Height="60"
                               VerticalContentAlignment="Top"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="The group name is auto-generated from your variables. You can modify it if needed."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right"
                                  Spacing="16">
                            <Button Command="{Binding CloseCreateGroupDialogCommand}"
                                    Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="Dismiss" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding CreateNewGroupCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon  Symbol="Add" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Create Group" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Progress Indicator -->
            <Grid 
                  Opacity="0.8"
                  IsVisible="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Value="0"
                           IsIndeterminate="True"
                           Width="50"
                           />
            </Grid>
        </Grid>
    </Border>
</UserControl>
