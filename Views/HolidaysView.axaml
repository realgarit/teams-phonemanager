<UserControl xmlns="https://github.com/avaloniaui"
             x:Class="teams_phonemanager.Views.HolidaysView"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fi="using:FluentIcons.Avalonia"
             xmlns:fic="using:FluentIcons.Common"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             xmlns:converters="clr-namespace:teams_phonemanager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <viewmodels:HolidaysViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Local styles removed, using App.axaml styles -->
    </UserControl.Styles>

    <Grid>
    <Border Classes="card" Margin="24">
        <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Main Content -->
                <Grid Grid.Row="0" Margin="32,32,32,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Status Message -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="{Binding StatusMessage}"
                             FontSize="14"
                             TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Holiday Management Content -->
                    <ScrollViewer Grid.Row="1" Margin="16">
                        <StackPanel>
                            <TextBlock Text="Follow these steps in order to create a holiday for your auto attendant:"
                                     FontSize="18"
                                 FontWeight="SemiBold"
                                     Margin="0,0,0,24"/>

                            <!-- Step 1: Create Holiday -->
                            <Border Classes="card" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Step 1: Create Holiday"
                                             FontSize="18"
                                             FontWeight="Bold"
                                             Margin="0,0,0,8"/>
                                    <TextBlock Text="Create a holiday schedule that will be used for the auto attendant. This defines when the holiday call flow should be active."
                                             FontSize="14"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,16"/>
                                    <Button
                                            Command="{Binding OpenCreateHolidayDialogCommand}"
                                            HorizontalAlignment="Left" Classes="IconText">
                                        <StackPanel Orientation="Horizontal">
                                            <fi:SymbolIcon  Symbol="CalendarAdd" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Text="Create Holiday" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- Step 2: Check Auto Attendant -->
                            <Border Classes="card" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Step 2: Check Auto Attendant"
                                             FontSize="18"
                                             FontWeight="Bold"
                                             Margin="0,0,0,8"/>
                                    <TextBlock Text="Verify the auto attendant exists and is ready to receive the holiday configuration. You can modify the auto attendant name if needed."
                                             FontSize="14"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,16"/>
                                    <Button
                                            Command="{Binding OpenCheckAutoAttendantDialogCommand}"
                                            HorizontalAlignment="Left" Classes="IconText">
                                        <StackPanel Orientation="Horizontal">
                                            <fi:SymbolIcon  Symbol="CallCheckmark" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                            <TextBlock Text="Check Auto Attendant" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- Step 3: Attach Holiday to Auto Attendant -->
                            <Border Classes="card" Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="Step 3: Attach Holiday to Auto Attendant"
                                             FontSize="18"
                                             FontWeight="Bold"
                                             Margin="0,0,0,8"/>
                                    <TextBlock Text="Attach the created holiday to the auto attendant. This will create a holiday call flow with disconnect action and associate it with the holiday schedule."
                                             FontSize="14"
                                             TextWrapping="Wrap"
                                             Margin="0,0,0,16"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button
                                                Command="{Binding OpenAttachHolidayDialogCommand}"
                                                Margin="0,0,16,0" Classes="IconText">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon  Symbol="Link" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                <TextBlock Text="Attach to Auto Attendant" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Progress Bar -->
                <ProgressBar Grid.Row="1" 
                             IsIndeterminate="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"
                             Height="4"
                             Margin="32,0,32,16"/>
            </Grid>
        </Border>

        <!-- Create Holiday Dialog - Border overlay -->
        <Border IsVisible="{Binding ShowCreateHolidayDialog}"
                Background="#80000000"
                ZIndex="1000"
                PointerPressed="CreateHolidayBackdrop_PointerPressed">
            <Border.Styles>
                <Style Selector="Border">
                    <Style.Animations>
                        <Animation Duration="0:0:0.2">
                            <KeyFrame Cue="0%">
                                <Setter Property="Opacity" Value="0"/>
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="Opacity" Value="1"/>
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Border.Styles>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                  PointerPressed="CreateHolidayCard_PointerPressed">
                <Border Classes="dialog" MinWidth="400" Margin="16">
                    <StackPanel>
                        <TextBlock Text="Create Holiday"
                                 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Holiday Configuration:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBlock Text="Holidays will be created based on your configured holiday series in the Variables page. Each holiday will use the specified date, time, and greeting prompt."
                                 FontSize="14"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right"
                                  Spacing="16">
                            <Button Command="{Binding CloseCreateHolidayDialogCommand}"
                                    Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="Dismiss" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button
                                    Command="{Binding CreateHolidayCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon  Symbol="CalendarAdd" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Create Holiday" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Check Auto Attendant Dialog - Border overlay -->
        <Border IsVisible="{Binding ShowCheckAutoAttendantDialog}"
                Background="#80000000"
                ZIndex="1000"
                PointerPressed="CheckAutoAttendantBackdrop_PointerPressed">
            <Border.Styles>
                <Style Selector="Border">
                    <Style.Animations>
                        <Animation Duration="0:0:0.2">
                            <KeyFrame Cue="0%">
                                <Setter Property="Opacity" Value="0"/>
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="Opacity" Value="1"/>
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Border.Styles>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                  PointerPressed="CheckAutoAttendantCard_PointerPressed">
                <Border Classes="dialog" MinWidth="400" Margin="16">
                    <StackPanel>
                        <TextBlock Text="Check Auto Attendant"
                                 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Auto Attendant Name:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding AutoAttendantName}"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will verify that the auto attendant exists and is ready to receive holiday configuration. The value is auto-generated from your variables, but you can modify it if needed."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right"
                                  Spacing="16">
                            <Button Command="{Binding CloseCheckAutoAttendantDialogCommand}"
                                    Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="Dismiss" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button
                                    Command="{Binding VerifyAutoAttendantCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon  Symbol="Checkmark" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Verify &amp; Confirm" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Attach Holiday to Auto Attendant Dialog - Border overlay -->
        <Border IsVisible="{Binding ShowAttachHolidayDialog}"
                Background="#80000000"
                ZIndex="1000"
                PointerPressed="AttachHolidayBackdrop_PointerPressed">
            <Border.Styles>
                <Style Selector="Border">
                    <Style.Animations>
                        <Animation Duration="0:0:0.2">
                            <KeyFrame Cue="0%">
                                <Setter Property="Opacity" Value="0"/>
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="Opacity" Value="1"/>
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Border.Styles>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                  PointerPressed="AttachHolidayCard_PointerPressed">
                <Border Classes="dialog" MinWidth="400" Margin="16">
                    <StackPanel>
                        <TextBlock Text="Attach Holiday to Auto Attendant"
                                 
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Holiday Name:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding HolidayName}"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Auto Attendant Name:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding AutoAttendantName}"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will attach the created holiday to the auto attendant, creating a holiday call flow with disconnect action and associating it with the holiday schedule."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right"
                                  Spacing="16">
                            <Button Command="{Binding CloseAttachHolidayDialogCommand}"
                                    Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="Dismiss" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button
                                    Command="{Binding AttachHolidayToAutoAttendantCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon  Symbol="Link" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Attach Holiday" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Progress Indicator -->
        <Grid 
              Opacity="0.8"
              IsVisible="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar
                       Value="0"
                       IsIndeterminate="True"
                       Width="50"
                       
                       Margin="0,16,0,0"/>
            
            <!-- Waiting Message -->
            <TextBlock Text="{Binding WaitingMessage, TargetNullValue=''}"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0,8,0,0"
                       TextAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl> 