<UserControl x:Class="teams_phonemanager.Views.CallQueuesView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fi="using:FluentIcons.Avalonia"
             xmlns:fic="using:FluentIcons.Common"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             xmlns:converters="clr-namespace:teams_phonemanager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <!-- DataContext is set via data binding from MainWindow -->

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <UserControl.Styles>
        <!-- Local styles removed, using App.axaml styles -->
    </UserControl.Styles>

    <Border Classes="card" Margin="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main Content -->
            <Grid Grid.Row="0" Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Page Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="Call Queues" Classes="page-title"/>
                    <TextBlock Text="Manage resource accounts, call queues, and step-by-step creation."
                             Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                             TextWrapping="Wrap"
                             Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Status Message -->
                <TextBlock Grid.Row="1" Text="{Binding StatusMessage}"
                         FontSize="13"
                         Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                         TextWrapping="Wrap"
                         Margin="0,0,0,12"
                         IsVisible="{Binding StatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                <!-- Tab Control -->
                <TabControl Grid.Row="2">
                    
                    <!-- Resource Accounts Tab -->
                    <TabItem Header="Resource Accounts">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Resource Accounts Actions -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Command="{Binding RetrieveResourceAccountsCommand}"
                                        ToolTip.Tip="Retrieve resource accounts from Microsoft Teams"
                                        AutomationProperties.Name="Retrieve Resource Accounts"
                                        Margin="0,0,16,0" Classes="IconText">
                                    <StackPanel Orientation="Horizontal">
                                        <fi:SymbolIcon  Symbol="ArrowSync" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="Retrieve Accounts" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="1"
                                        Command="{Binding OpenCreateResourceAccountDialogCommand}"
                                        ToolTip.Tip="Open dialog to create a new resource account"
                                        AutomationProperties.Name="Create Resource Account"
                                        Margin="0,0,8,0" Classes="IconText">
                                    <StackPanel Orientation="Horizontal">
                                        <fi:SymbolIcon  Symbol="PersonAdd" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="Create Account" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="2"
                                        Command="{Binding RemoveResourceAccountCommand}"
                                        ToolTip.Tip="Remove the selected resource account"
                                        AutomationProperties.Name="Remove Resource Account"
                                        Margin="0,0,16,0" Classes="IconText">
                                    <StackPanel Orientation="Horizontal">
                                        <fi:SymbolIcon Symbol="PersonDelete" Foreground="OrangeRed"/>
                                        <TextBlock Text="Remove Account" VerticalAlignment="Center" Foreground="OrangeRed"/>
                                    </StackPanel>
                                </Button>

                                <TextBox Grid.Column="3"
                                         Text="{Binding SearchResourceAccountsText}"
                                         Watermark="Search resource accounts..."
                                         ToolTip.Tip="Search resource accounts"
                                         AutomationProperties.Name="Search resource accounts"/>
                            </Grid>

                            <!-- Resource Accounts List -->
                            <DataGrid Grid.Row="2"
                                      AutomationProperties.Name="Resource Accounts List"
                                      ItemsSource="{Binding ResourceAccountsView}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      
                                      
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      SelectionMode="Single"
                                      
                                      HorizontalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="2*"/>
                                    <DataGridTextColumn Header="UPN" Binding="{Binding UserPrincipalName}" Width="2*"/>
                                    <DataGridTextColumn Header="Identity" Binding="{Binding Identity}" Width="2*"/>
                                    <DataGridTextColumn Header="Usage Location" Binding="{Binding UsageLocation}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <!-- Call Queues Tab -->
                    <TabItem Header="Call Queues">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Call Queues Actions -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Command="{Binding RetrieveCallQueuesCommand}"
                                        ToolTip.Tip="Retrieve call queues from Microsoft Teams"
                                        AutomationProperties.Name="Retrieve Call Queues"
                                        Margin="0,0,16,0" Classes="IconText">
                                    <StackPanel Orientation="Horizontal">
                                        <fi:SymbolIcon  Symbol="ArrowSync" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="Retrieve Queues" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="1"
                                        Command="{Binding OpenCreateCallQueueDialogCommand}"
                                        ToolTip.Tip="Open dialog to create a new call queue"
                                        AutomationProperties.Name="Create Call Queue"
                                        Margin="0,0,8,0" Classes="IconText">
                                    <StackPanel Orientation="Horizontal">
                                        <fi:SymbolIcon  Symbol="CallAdd" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                        <TextBlock Text="Create Queue" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="2"
                                        Command="{Binding RemoveCallQueueCommand}"
                                        ToolTip.Tip="Remove the selected call queue"
                                        AutomationProperties.Name="Remove Call Queue"
                                        Margin="0,0,16,0" Classes="IconText">
                                    <StackPanel Orientation="Horizontal">
                                        <fi:SymbolIcon Symbol="CallDismiss" Foreground="OrangeRed"/>
                                        <TextBlock Text="Remove Queue" VerticalAlignment="Center" Foreground="OrangeRed"/>
                                    </StackPanel>
                                </Button>

                                <TextBox Grid.Column="3"
                                         Text="{Binding SearchCallQueuesText}"
                                         Watermark="Search call queues..."
                                         ToolTip.Tip="Search call queues"
                                         AutomationProperties.Name="Search call queues"/>
                            </Grid>

                            <!-- Call Queues List -->
                            <DataGrid Grid.Row="2"
                                      AutomationProperties.Name="Call Queues List"
                                      ItemsSource="{Binding CallQueuesView}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      
                                      
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      SelectionMode="Single"
                                      
                                      HorizontalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                                    <DataGridTextColumn Header="Identity" Binding="{Binding Identity}" Width="2*"/>
                                    <DataGridTextColumn Header="Routing Method" Binding="{Binding RoutingMethod}" Width="*"/>
                                    <DataGridTextColumn Header="Agent Alert Time" Binding="{Binding AgentAlertTime}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <!-- Step-by-Step Creation Tab -->
                    <TabItem Header="Step-by-Step Creation">
                        <ScrollViewer Margin="16">
                            <StackPanel>
                                <TextBlock Text="Follow these steps in order to create a complete call queue setup:"
                                         FontSize="18"
                                 FontWeight="SemiBold"
                                         Margin="0,0,0,24"/>

                                <!-- Step 1: Create Resource Account -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 1: Create Resource Account"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create a resource account for the call queue. This account will handle the call queue functionality."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenCreateResourceAccountDialogCommand}"
                                                HorizontalAlignment="Left" Classes="IconText">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon  Symbol="PersonAdd" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                <TextBlock Text="Create Resource Account" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 2: Update Usage Location -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 2: Update Usage Location"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Set the usage location for the resource account. This is required for licensing."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenUpdateUsageLocationDialogCommand}"
                                                HorizontalAlignment="Left" Classes="IconText">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon  Symbol="Location" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                <TextBlock Text="Update Usage Location" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 3: Assign License -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 3: Assign License"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Assign a license to the resource account. This is required for the resource account to function properly."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding AssignLicenseCommand}"
                                                HorizontalAlignment="Left" Classes="IconText">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon  Symbol="Certificate" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                <TextBlock Text="Assign License" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 4: Get M365 Group ID -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 4: Get M365 Group ID"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Retrieve the M365 Group ID from the group name. This is required before creating the call queue."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding GetM365GroupIdCommand}"
                                                HorizontalAlignment="Left" Classes="IconText">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon  Symbol="PersonSearch" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                <TextBlock Text="Get M365 Group ID" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 5: Create Call Queue -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 5: Create Call Queue"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create the actual call queue with routing settings and distribution lists."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenCreateCallQueueDialogCommand}"
                                                HorizontalAlignment="Left" Classes="IconText">
                    <StackPanel Orientation="Horizontal">
                        <fi:SymbolIcon  Symbol="CallAdd" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Create Call Queue" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                                    </StackPanel>
                                </Border>

                                <!-- Step 6: Associate Resource Account -->
                                <Border Classes="card" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Step 6: Associate Resource Account"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Associate the resource account with the call queue to complete the setup."
                                                 FontSize="14"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button
                                                Command="{Binding OpenAssociateDialogCommand}"
                                                HorizontalAlignment="Left" Classes="IconText">
                                            <StackPanel Orientation="Horizontal">
                                                <fi:SymbolIcon  Symbol="Link" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                                <TextBlock Text="Associate Account" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- Create Resource Account Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateResourceAccountDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateResourceAccountBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateResourceAccountCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create Resource Account"
                                 Classes="dialog-title"/>
                        
                        <TextBlock Text="UPN:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Display Name:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountDisplayName}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="The values are auto-generated from your variables. You can modify them if needed."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right"
                                  Spacing="16">
                            <Button Command="{Binding CloseCreateResourceAccountDialogCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="Dismiss" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button
                                    Command="{Binding CreateResourceAccountCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon  Symbol="PersonAdd" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Create Account" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Update Usage Location Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowUpdateUsageLocationDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="UpdateUsageLocationBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="UpdateUsageLocationCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Update Usage Location"
                                 Classes="dialog-title"/>
                        
                        <TextBlock Text="Resource Account UPN:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                               IsReadOnly="True"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will update the usage location for the resource account. The value is taken from your variables."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right"
                                  Spacing="16">
                            <Button Command="{Binding CloseUpdateUsageLocationDialogCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="Dismiss" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button
                                    Command="{Binding UpdateUsageLocationCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon  Symbol="Location" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Update Location" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Create Call Queue Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateCallQueueDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateCallQueueBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateCallQueueCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create Call Queue"
                                 Classes="dialog-title"/>
                        
                        <TextBlock Text="Call Queue Name:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding CallQueueName}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="M365 Group ID:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding M365GroupId}"
                               Margin="0,0,0,8"/>
                        <TextBlock Text="Note: Use 'Get M365 Group ID' button to retrieve the Group ID before creating the call queue."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="The call queue name is auto-generated from your variables. Use the 'Get M365 Group ID' button to retrieve the Group ID."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right"
                                  Spacing="16">
                            <Button Command="{Binding CloseCreateCallQueueDialogCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="Dismiss" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button
                                    Command="{Binding CreateCallQueueCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon  Symbol="CallAdd" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Create Queue" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Associate Resource Account Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowAssociateDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="AssociateResourceAccountBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="AssociateResourceAccountCard_PointerPressed">
                    <Border Classes="dialog" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Associate Resource Account with Call Queue"
                                 Classes="dialog-title"/>
                        
                        <TextBlock Text="Resource Account UPN:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Call Queue Name:"
                                 FontSize="16"
                                 FontWeight="SemiBold"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding CallQueueName}"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will associate the resource account with the call queue to complete the setup."
                                 FontSize="12"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right"
                                  Spacing="16">
                            <Button Command="{Binding CloseAssociateDialogCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="Dismiss" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Cancel" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button
                                    Command="{Binding AssociateResourceAccountWithCallQueueCommand}" Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon  Symbol="Link" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                    <TextBlock Text="Associate" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Progress Indicator -->
            <Grid Grid.RowSpan="2"
                  ZIndex="2000"
                  Background="#40000000"
                  IsVisible="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ProgressBar
                               AutomationProperties.Name="Operation Progress"
                               Value="0"
                               IsIndeterminate="True"
                               Width="50"
                               Margin="0,0,0,16"/>
                
                    <!-- Waiting Message -->
                    <TextBlock Text="{Binding WaitingMessage, TargetNullValue=''}"
                               FontSize="14"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl> 