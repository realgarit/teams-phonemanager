<UserControl x:Class="teams_phonemanager.Views.CallQueuesView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:material="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:materialStyles="clr-namespace:Material.Styles;assembly=Material.Styles"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <viewmodels:CallQueuesViewModel/>
    </UserControl.DataContext>

    <material:Card Margin="32" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Main Content -->
            <Grid Grid.Row="0" Margin="32,32,32,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Status Message -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="{Binding StatusMessage}"
                             Classes="body1"
                             TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Tab Control -->
                <TabControl Grid.Row="1">
                    
                    <!-- Resource Accounts Tab -->
                    <TabItem Header="Resource Accounts">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Resource Accounts Actions -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Classes="raised"
                                        Command="{Binding RetrieveResourceAccountsCommand}"
                                        Height="40"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialIcons:MaterialIcon Kind="Refresh" Margin="0,0,8,0"/>
                                        <TextBlock Text="Retrieve Accounts"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="1"
                                        Classes="raised"
                                        Command="{Binding OpenCreateResourceAccountDialogCommand}"
                                        Height="40"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialIcons:MaterialIcon Kind="AccountPlus" Margin="0,0,8,0"/>
                                        <TextBlock Text="Create Account"/>
                                    </StackPanel>
                                </Button>

                                <TextBox Grid.Column="2"
                                         Text="{Binding SearchResourceAccountsText}"
                                         Classes="outlined"
                                         Watermark="Search resource accounts..."/>
                            </Grid>

                            <!-- Resource Accounts List -->
                            <DataGrid Grid.Row="2"
                                      ItemsSource="{Binding ResourceAccountsView}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      
                                      
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      SelectionMode="Single"
                                      
                                      HorizontalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="2*"/>
                                    <DataGridTextColumn Header="UPN" Binding="{Binding UserPrincipalName}" Width="2*"/>
                                    <DataGridTextColumn Header="Identity" Binding="{Binding Identity}" Width="2*"/>
                                    <DataGridTextColumn Header="Usage Location" Binding="{Binding UsageLocation}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <!-- Call Queues Tab -->
                    <TabItem Header="Call Queues">
                        <Grid Margin="16">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Call Queues Actions -->
                            <Grid Grid.Row="0" Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Classes="raised"
                                        Command="{Binding RetrieveCallQueuesCommand}"
                                        Height="40"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialIcons:MaterialIcon Kind="Refresh" Margin="0,0,8,0"/>
                                        <TextBlock Text="Retrieve Queues"/>
                                    </StackPanel>
                                </Button>

                                <Button Grid.Column="1"
                                        Classes="raised"
                                        Command="{Binding OpenCreateCallQueueDialogCommand}"
                                        Height="40"
                                        Margin="0,0,16,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialIcons:MaterialIcon Kind="PhonePlus" Margin="0,0,8,0"/>
                                        <TextBlock Text="Create Queue"/>
                                    </StackPanel>
                                </Button>

                                <TextBox Grid.Column="2"
                                         Text="{Binding SearchCallQueuesText}"
                                         Classes="outlined"
                                         Watermark="Search call queues..."/>
                            </Grid>

                            <!-- Call Queues List -->
                            <DataGrid Grid.Row="2"
                                      ItemsSource="{Binding CallQueuesView}"
                                      AutoGenerateColumns="False"
                                      HeadersVisibility="Column"
                                      
                                      
                                      IsReadOnly="True"
                                      GridLinesVisibility="None"
                                      SelectionMode="Single"
                                      
                                      HorizontalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                                    <DataGridTextColumn Header="Identity" Binding="{Binding Identity}" Width="2*"/>
                                    <DataGridTextColumn Header="Routing Method" Binding="{Binding RoutingMethod}" Width="*"/>
                                    <DataGridTextColumn Header="Agent Alert Time" Binding="{Binding AgentAlertTime}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>

                    <!-- Step-by-Step Creation Tab -->
                    <TabItem Header="Step-by-Step Creation">
                        <ScrollViewer Margin="16">
                            <StackPanel>
                                <TextBlock Text="Follow these steps in order to create a complete call queue setup:"
                                         Classes="subtitle1"
                                         Margin="0,0,0,24"/>

                                <!-- Step 1: Create Resource Account -->
                                <material:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 1: Create Resource Account"
                                                 Classes="subtitle1"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create a resource account for the call queue. This account will handle the call queue functionality."
                                                 Classes="body2"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Classes="raised"
                                                Command="{Binding OpenCreateResourceAccountDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <materialIcons:MaterialIcon Kind="AccountPlus" Margin="0,0,8,0"/>
                                                <TextBlock Text="Create Resource Account"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </material:Card>

                                <!-- Step 2: Update Usage Location -->
                                <material:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 2: Update Usage Location"
                                                 Classes="subtitle1"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Set the usage location for the resource account. This is required for licensing."
                                                 Classes="body2"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Classes="raised"
                                                Command="{Binding OpenUpdateUsageLocationDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <materialIcons:MaterialIcon Kind="MapMarker" Margin="0,0,8,0"/>
                                                <TextBlock Text="Update Usage Location"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </material:Card>

                                <!-- Step 3: Assign License -->
                                <material:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 3: Assign License"
                                                 Classes="subtitle1"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Assign a license to the resource account. This is required for the resource account to function properly."
                                                 Classes="body2"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Classes="raised"
                                                Command="{Binding AssignLicenseCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <materialIcons:MaterialIcon Kind="Certificate" Margin="0,0,8,0"/>
                                                <TextBlock Text="Assign License"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </material:Card>

                                <!-- Step 4: Get M365 Group ID -->
                                <material:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 4: Get M365 Group ID"
                                                 Classes="subtitle1"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Retrieve the M365 Group ID from the group name. This is required before creating the call queue."
                                                 Classes="body2"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Classes="raised"
                                                Command="{Binding GetM365GroupIdCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <materialIcons:MaterialIcon Kind="AccountSearch" Margin="0,0,8,0"/>
                                                <TextBlock Text="Get M365 Group ID"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </material:Card>

                                <!-- Step 5: Create Call Queue -->
                                <material:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 5: Create Call Queue"
                                                 Classes="subtitle1"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Create the actual call queue with routing settings and distribution lists."
                                                 Classes="body2"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Classes="raised"
                                                Command="{Binding OpenCreateCallQueueDialogCommand}"
                                                HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon Kind="PhonePlus" Margin="0,0,8,0"/>
                        <TextBlock Text="Create Call Queue"/>
                    </StackPanel>
                </Button>
                                    </StackPanel>
                                </material:Card>

                                <!-- Step 6: Associate Resource Account -->
                                <material:Card Margin="0,0,0,16" Padding="16">
                                    <StackPanel>
                                        <TextBlock Text="Step 6: Associate Resource Account"
                                                 Classes="subtitle1"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,8"/>
                                        <TextBlock Text="Associate the resource account with the call queue to complete the setup."
                                                 Classes="body2"
                                                 TextWrapping="Wrap"
                                                 Margin="0,0,0,16"/>
                                        <Button Classes="raised"
                                                Command="{Binding OpenAssociateDialogCommand}"
                                                HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <materialIcons:MaterialIcon Kind="Link" Margin="0,0,8,0"/>
                                                <TextBlock Text="Associate Account"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </material:Card>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>

            <!-- Create Resource Account Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateResourceAccountDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateResourceAccountBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateResourceAccountCard_PointerPressed">
                    <material:Card Padding="16" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create Resource Account"
                                 Classes="headline6"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="UPN:"
                                 Classes="subtitle2"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                                 Classes="outlined"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Display Name:"
                                 Classes="subtitle2"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountDisplayName}"
                                 Classes="outlined"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="The values are auto-generated from your variables. You can modify them if needed."
                                 Classes="caption"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Classes="flat"
                                    Command="{Binding CloseCreateResourceAccountDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button Classes="raised"
                                    Command="{Binding CreateResourceAccountCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="AccountPlus" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create Account"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </material:Card>
                </Grid>
            </Border>

            <!-- Update Usage Location Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowUpdateUsageLocationDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="UpdateUsageLocationBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="UpdateUsageLocationCard_PointerPressed">
                    <material:Card Padding="16" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Update Usage Location"
                                 Classes="headline6"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Resource Account UPN:"
                                 Classes="subtitle2"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                                 Classes="outlined"
                               IsReadOnly="True"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will update the usage location for the resource account. The value is taken from your variables."
                                 Classes="caption"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Classes="flat"
                                    Command="{Binding CloseUpdateUsageLocationDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button Classes="raised"
                                    Command="{Binding UpdateUsageLocationCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="MapMarker" Margin="0,0,8,0"/>
                                    <TextBlock Text="Update Location"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </material:Card>
                </Grid>
            </Border>

            <!-- Create Call Queue Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowCreateCallQueueDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="CreateCallQueueBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="CreateCallQueueCard_PointerPressed">
                    <material:Card Padding="16" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Create Call Queue"
                                 Classes="headline6"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Call Queue Name:"
                                 Classes="subtitle2"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding CallQueueName}"
                                 Classes="outlined"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="M365 Group ID:"
                                 Classes="subtitle2"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding M365GroupId}"
                                 Classes="outlined"
                               Margin="0,0,0,8"/>
                        <TextBlock Text="Note: Use 'Get M365 Group ID' button to retrieve the Group ID before creating the call queue."
                                 Classes="caption"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="The call queue name is auto-generated from your variables. Use the 'Get M365 Group ID' button to retrieve the Group ID."
                                 Classes="caption"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Classes="flat"
                                    Command="{Binding CloseCreateCallQueueDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button Classes="raised"
                                    Command="{Binding CreateCallQueueCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="PhonePlus" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create Queue"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </material:Card>
                </Grid>
            </Border>

            <!-- Associate Resource Account Dialog - Border overlay -->
            <Border IsVisible="{Binding ShowAssociateDialog}"
                    Background="#80000000"
                    ZIndex="1000"
                    PointerPressed="AssociateResourceAccountBackdrop_PointerPressed">
                <Border.Styles>
                    <Style Selector="Border">
                        <Style.Animations>
                            <Animation Duration="0:0:0.2">
                                <KeyFrame Cue="0%">
                                    <Setter Property="Opacity" Value="0"/>
                                </KeyFrame>
                                <KeyFrame Cue="100%">
                                    <Setter Property="Opacity" Value="1"/>
                                </KeyFrame>
                            </Animation>
                        </Style.Animations>
                    </Style>
                </Border.Styles>
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                      PointerPressed="AssociateResourceAccountCard_PointerPressed">
                    <material:Card Padding="16" MinWidth="400" Margin="16">
                        <StackPanel>
                        <TextBlock Text="Associate Resource Account with Call Queue"
                                 Classes="headline6"
                                 Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Resource Account UPN:"
                                 Classes="subtitle2"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding ResourceAccountUpn}"
                                 Classes="outlined"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Call Queue Name:"
                                 Classes="subtitle2"
                                 Margin="0,0,0,8"/>
                        <TextBox Text="{Binding CallQueueName}"
                                 Classes="outlined"
                               Margin="0,0,0,16"/>
                        
                        <TextBlock Text="This will associate the resource account with the call queue to complete the setup."
                                 Classes="caption"
                                 Opacity="0.7"
                                 TextWrapping="Wrap"
                                 Margin="0,0,0,16"/>
                        
                        <StackPanel Orientation="Horizontal" 
                                  HorizontalAlignment="Right">
                            <Button Classes="flat"
                                    Command="{Binding CloseAssociateDialogCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="Cancel"/>
                            </Button>
                            <Button Classes="raised"
                                    Command="{Binding AssociateResourceAccountWithCallQueueCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="Link" Margin="0,0,8,0"/>
                                    <TextBlock Text="Associate"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                    </material:Card>
                </Grid>
            </Border>

            <!-- Progress Indicator -->
            <Grid 
                  Opacity="0.8"
                  IsVisible="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Classes="circular"
                           Value="0"
                           IsIndeterminate="True"
                           Width="50"
                           Height="50"
                           Margin="0,16,0,0"/>
                
                <!-- Waiting Message -->
                <TextBlock Text="{Binding WaitingMessage, TargetNullValue=''}"
                           Classes="body2"
                           TextWrapping="Wrap"
                           Margin="0,8,0,0"
                           TextAlignment="Center"/>
            </Grid>
        </Grid>
    </material:Card>
</UserControl> 