<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:material="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             x:Class="teams_phonemanager.Views.WelcomeView"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.DataContext>
        <viewmodels:WelcomeViewModel/>
    </UserControl.DataContext>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24">
            <!-- Header Section -->
            <material:Card Margin="0,0,0,24" CornerRadius="12" Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                        <materialIcons:MaterialIcon Kind="MicrosoftTeams" 
                                               Width="72" 
                                               Height="72"
                                               Margin="0,0,16,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Teams Phone Manager"
                                     Classes="headline3"
                                     FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock Text="Your complete solution for Microsoft Teams Phone"
                             Classes="subtitle1"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Opacity="0.87"
                             Margin="0,0,0,24"/>
                    
                    <!-- Action Buttons with Icons -->
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,24">
                        <Button Command="{Binding NavigateToGetStartedCommand}"
                                Classes="raised"
                                Margin="0,0,16,0"
                                Padding="30,15"
                                FontSize="16"
                                FontWeight="Bold"
                                MinWidth="200"
                                Height="50">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="RocketLaunch" 
                                                       Width="20" 
                                                       Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="Get Started"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding OpenDocumentationCommand}"
                                Classes="raised"
                                Padding="30,15"
                                FontSize="16"
                                FontWeight="Bold"
                                MinWidth="200"
                                Height="50">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="Github" 
                                                       Width="20" 
                                                       Height="20"
                                                       Margin="0,0,8,0"/>
                                <TextBlock Text="GitHub"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </material:Card>

            <!-- Features Grid -->
            <TextBlock Text="What you can do"
                     Classes="headline5"
                     Margin="0,0,0,16"
                     FontWeight="Bold"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Setup & Configuration -->
                <material:Card Grid.Row="0" Grid.Column="0" 
                               Margin="0,0,12,16" 
                               CornerRadius="8"
                               Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialIcons:MaterialIcon Kind="Wrench" 
                                                   Width="32" 
                                                   Height="32"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Setup &amp; Config"
                                     Classes="subtitle1"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 Classes="body2"
                                 Opacity="0.87">
                            Install PowerShell modules and connect to Teams and Graph services.
                        </TextBlock>
                    </StackPanel>
                </material:Card>

                <!-- Variables Management -->
                <material:Card Grid.Row="0" Grid.Column="1" 
                               Margin="12,0,0,16" 
                               CornerRadius="8"
                               Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialIcons:MaterialIcon Kind="Cog" 
                                                   Width="32" 
                                                   Height="32"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Variables"
                                     Classes="subtitle1"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 Classes="body2"
                                 Opacity="0.87">
                            Set up customer details, domains, languages, and time zones.
                        </TextBlock>
                    </StackPanel>
                </material:Card>

                <!-- M365 Groups -->
                <material:Card Grid.Row="1" Grid.Column="0" 
                               Margin="0,0,12,16" 
                               CornerRadius="8"
                               Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialIcons:MaterialIcon Kind="AccountGroup" 
                                                   Width="32" 
                                                   Height="32"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="M365 Groups"
                                     Classes="subtitle1"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 Classes="body2"
                                 Opacity="0.87">
                            Create and manage Microsoft 365 groups for your phone system.
                        </TextBlock>
                    </StackPanel>
                </material:Card>

                <!-- Call Queues -->
                <material:Card Grid.Row="1" Grid.Column="1" 
                               Margin="12,0,0,16" 
                               CornerRadius="8"
                               Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialIcons:MaterialIcon Kind="PhoneInTalk" 
                                                   Width="32" 
                                                   Height="32"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Call Queues"
                                     Classes="subtitle1"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 Classes="body2"
                                 Opacity="0.87">
                            Set up call queues with resource accounts and licensing. 
                            Manage routing methods and agent assignments.
                        </TextBlock>
                    </StackPanel>
                </material:Card>

                <!-- Auto Attendants -->
                <material:Card Grid.Row="2" Grid.Column="0" 
                               Margin="0,0,8,0" 
                               CornerRadius="8"
                               Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialIcons:MaterialIcon Kind="Robot" 
                                                   Width="32" 
                                                   Height="32"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Auto Attendants"
                                     Classes="subtitle1"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 Classes="body2"
                                 Opacity="0.87">
                            Configure auto attendants with call flows and schedules. 
                            Set up business hours and after-hours routing.
                        </TextBlock>
                    </StackPanel>
                </material:Card>

                <!-- Holidays -->
                <material:Card Grid.Row="2" Grid.Column="1" 
                               Margin="12,0,0,0" 
                               CornerRadius="8"
                               Padding="16">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <materialIcons:MaterialIcon Kind="Calendar" 
                                                   Width="32" 
                                                   Height="32"
                                                   Margin="0,0,8,0"
                                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Holidays"
                                     Classes="subtitle1"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 Classes="body2"
                                 Opacity="0.87">
                            Manage holiday schedules with Swiss holiday support.
                        </TextBlock>
                    </StackPanel>
                </material:Card>
            </Grid>

            <!-- Quick Start Section -->
            <material:Card Margin="0,24,0,0" CornerRadius="12" Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <materialIcons:MaterialIcon Kind="LightningBolt" 
                                               Width="28" 
                                               Height="28"
                                               Margin="0,0,8,0"/>
                        <TextBlock Text="Quick Start Guide"
                                 Classes="subtitle1"
                                 FontWeight="Bold"/>
                    </StackPanel>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="1. Setup"
                                     Classes="subtitle2"
                                     FontWeight="Bold"
                                     Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap"
                                     Classes="body2"
                                     Opacity="0.9"
                                     LineHeight="20">
                                Start with the Get Started page to install PowerShell modules and connect to Microsoft services.
                            </TextBlock>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="6,0">
                            <TextBlock Text="2. Configure"
                                     Classes="subtitle2"
                                     FontWeight="Bold"
                                     Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap"
                                     Classes="body2"
                                     Opacity="0.9"
                                     LineHeight="20">
                                Set up your variables with customer details, domains, and system preferences.
                            </TextBlock>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="12,0,0,0">
                            <TextBlock Text="3. Deploy"
                                     Classes="subtitle2"
                                     FontWeight="Bold"
                                     Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap"
                                     Classes="body2"
                                     Opacity="0.9"
                                     LineHeight="20">
                                Create M365 groups, call queues, auto attendants, and configure holiday schedules.
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </material:Card>

        </StackPanel>
    </ScrollViewer>
</UserControl>

