<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fi="using:FluentIcons.Avalonia"
             xmlns:fic="using:FluentIcons.Common"
             xmlns:local="clr-namespace:teams_phonemanager.Views"
             xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
             x:Class="teams_phonemanager.Views.WelcomeView"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.DataContext>
        <viewmodels:WelcomeViewModel/>
    </UserControl.DataContext>

    <UserControl.Styles>
        <Style Selector="Border.card">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundFillColorDefaultBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardStrokeColorDefaultBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24">
            <!-- Header Section -->
            <Border Classes="card" Margin="0,0,0,24">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                        <fi:SymbolIcon Symbol="{x:Static fic:Symbol.PeopleTeam}" FontSize="72" Margin="0,0,16,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Teams Phone Manager"
                                     FontSize="32"
                                     FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <TextBlock Text="Your complete solution for Microsoft Teams Phone"
                             FontSize="18"
                             TextAlignment="Center"
                             TextWrapping="Wrap"
                             Opacity="0.87"
                             Margin="0,0,0,24"/>
                    
                    <!-- Action Buttons with Icons -->
                    <StackPanel Orientation="Horizontal" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,24">
                        <Button Command="{Binding NavigateToGetStartedCommand}"
                                Margin="0,0,16,0"
                                Padding="30,15"
                                FontSize="16"
                                FontWeight="Bold"
                                MinWidth="200"
                                Height="50">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Rocket}}" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Get Started"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding OpenDocumentationCommand}"
                                Padding="30,15"
                                FontSize="16"
                                FontWeight="Bold"
                                MinWidth="200"
                                Height="50">
                            <StackPanel Orientation="Horizontal">
                                <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Code}}" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="GitHub"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Features Grid -->
            <TextBlock Text="What you can do"
                     FontSize="24"
                     Margin="0,0,0,16"
                     FontWeight="Bold"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Setup & Configuration -->
                <Border Grid.Row="0" Grid.Column="0" 
                       Classes="card"
                       Margin="0,0,12,16"
                       CornerRadius="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Settings}}" FontSize="32" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Setup &amp; Config"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 FontSize="14"
                                 Opacity="0.87">
                            Install PowerShell modules and connect to Teams and Graph services.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Variables Management -->
                <Border Grid.Row="0" Grid.Column="1" 
                       Classes="card"
                       Margin="12,0,0,16"
                       CornerRadius="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Code}" FontSize="32" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Variables"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 FontSize="14"
                                 Opacity="0.87">
                            Set up customer details, domains, languages, and time zones.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- M365 Groups -->
                <Border Grid.Row="1" Grid.Column="0" 
                       Classes="card"
                       Margin="0,0,12,16"
                       CornerRadius="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <fi:SymbolIcon Symbol="{x:Static fic:Symbol.People}}" FontSize="32" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="M365 Groups"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 FontSize="14"
                                 Opacity="0.87">
                            Create and manage Microsoft 365 groups for your phone system.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Call Queues -->
                <Border Grid.Row="1" Grid.Column="1" 
                       Classes="card"
                       Margin="12,0,0,16"
                       CornerRadius="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <fi:SymbolIcon Symbol="{x:Static fic:Symbol.CallInbound}}" FontSize="32" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Call Queues"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 FontSize="14"
                                 Opacity="0.87">
                            Set up call queues with resource accounts and licensing. 
                            Manage routing methods and agent assignments.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Auto Attendants -->
                <Border Grid.Row="2" Grid.Column="0" 
                       Classes="card"
                       Margin="0,0,8,0" 
                       CornerRadius="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Bot}}" FontSize="32" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Auto Attendants"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 FontSize="14"
                                 Opacity="0.87">
                            Configure auto attendants with call flows and schedules. 
                            Set up business hours and after-hours routing.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Holidays -->
                <Border Grid.Row="2" Grid.Column="1" 
                       Classes="card"
                       Margin="12,0,0,0" 
                       CornerRadius="8">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Calendar}}" FontSize="32" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Holidays"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock TextWrapping="Wrap"
                                 FontSize="14"
                                 Opacity="0.87">
                            Manage holiday schedules with Swiss holiday support.
                        </TextBlock>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Quick Start Section -->
            <Border Classes="card" Margin="0,24,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Flash}}" FontSize="28" Margin="0,0,8,0"/>
                        <TextBlock Text="Quick Start Guide"
                                 FontSize="18"
                                 FontWeight="Bold"/>
                    </StackPanel>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                            <TextBlock Text="1. Setup"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap"
                                     FontSize="14"
                                     Opacity="0.9"
                                     LineHeight="20">
                                Start with the Get Started page to install PowerShell modules and connect to Microsoft services.
                            </TextBlock>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="6,0">
                            <TextBlock Text="2. Configure"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap"
                                     FontSize="14"
                                     Opacity="0.9"
                                     LineHeight="20">
                                Set up your variables with customer details, domains, and system preferences.
                            </TextBlock>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="12,0,0,0">
                            <TextBlock Text="3. Deploy"
                                     FontSize="16"
                                     FontWeight="Bold"
                                     Margin="0,0,0,12"/>
                            <TextBlock TextWrapping="Wrap"
                                     FontSize="14"
                                     Opacity="0.9"
                                     LineHeight="20">
                                Create M365 groups, call queues, auto attendants, and configure holiday schedules.
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
