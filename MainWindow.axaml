<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fi="using:FluentIcons.Avalonia"
        xmlns:fic="using:FluentIcons.Common"
        xmlns:local="clr-namespace:teams_phonemanager"
        xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
        xmlns:converters="clr-namespace:teams_phonemanager.Converters"
        xmlns:views="clr-namespace:teams_phonemanager.Views"
        xmlns:services="clr-namespace:teams_phonemanager.Services"
        mc:Ignorable="d"
        x:Class="teams_phonemanager.MainWindow"
        Title="Teams Phone Manager"
        Width="1280"
        Height="720"
        MinWidth="1024"
        MinHeight="640">

    <!-- DataContext is set via DI in App.xaml.cs -->

    <Window.Styles>
        <Style Selector="Border.header">
            <Setter Property="Background" Value="{DynamicResource TeamsPrimaryBrush}"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
    </Window.Styles>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Classes="header">
            <DockPanel LastChildFill="False">
                <TextBlock Text="Teams Phone Manager" 
                         FontSize="18"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"
                         Foreground="White"/>
                <Button x:Name="SettingsButton"
                        DockPanel.Dock="Right" 
                        Command="{Binding ToggleSettingsCommand}"
                        Background="Transparent"
                        Foreground="White"
                        Width="40"
                        Height="40"
                        Classes="IconOnly"
                        AutomationProperties.Name="Settings"
                        ToolTip.Tip="Settings">
                    <fi:SymbolIcon 
                              Symbol="Settings"
                              Foreground="White"/>
                </Button>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Grid Grid.Column="0" Margin="16,16,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ListBox x:Name="NavigationListBox" Grid.Column="0" Classes="nav"
                         SelectionChanged="NavigationListBox_SelectionChanged">
                    <ListBoxItem Tag="Welcome" Classes="nav">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <fi:SymbolIcon Symbol="Home"/>
                            <TextBlock Text="Welcome" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="GetStarted" Classes="nav">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <fi:SymbolIcon Symbol="Rocket"/>
                            <TextBlock Text="Get Started" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Variables" Classes="nav">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <fi:SymbolIcon Symbol="Code"/>
                            <TextBlock Text="Variables" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="M365Groups" Classes="nav">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <fi:SymbolIcon Symbol="PeopleTeam"/>
                            <TextBlock Text="M365 Groups" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="CallQueues" Classes="nav">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <fi:SymbolIcon Symbol="CallInbound"/>
                            <TextBlock Text="Call Queues" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="AutoAttendants" Classes="nav">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <fi:SymbolIcon Symbol="Bot"/>
                            <TextBlock Text="Auto Attendants" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Holidays" Classes="nav">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <fi:SymbolIcon Symbol="Calendar"/>
                            <TextBlock Text="Holidays" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Documentation" Classes="nav">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <fi:SymbolIcon Symbol="DocumentText"/>
                            <TextBlock Text="Documentation" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="Wizard" Classes="nav">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <fi:SymbolIcon Symbol="Wand"/>
                            <TextBlock Text="Setup Wizard" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem Tag="BulkOperations" Classes="nav">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <fi:SymbolIcon Symbol="TableMultiple"/>
                            <TextBlock Text="Bulk Operations" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
                
                <Border Grid.Column="1"
                        Background="{DynamicResource DividerStrokeColorDefaultBrush}"
                        Width="1"
                        Margin="4,8,0,8"/>
            </Grid>

            <!-- Content Area -->
            <Grid Grid.Column="1" Margin="16">
                <ContentControl Content="{Binding CurrentPage}">
                    <ContentControl.ContentTemplate>
                        <converters:PageTemplateSelector>
                            <converters:PageTemplateSelector.WelcomeTemplate>
                                <DataTemplate>
                                    <views:WelcomeView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.WelcomeTemplate>
                            <converters:PageTemplateSelector.GetStartedTemplate>
                                <DataTemplate>
                                    <views:GetStartedView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.GetStartedTemplate>
                            <converters:PageTemplateSelector.VariablesTemplate>
                                <DataTemplate>
                                    <views:VariablesView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.VariablesTemplate>
                            <converters:PageTemplateSelector.M365GroupsTemplate>
                                <DataTemplate>
                                    <views:M365GroupsView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.M365GroupsTemplate>
                            <converters:PageTemplateSelector.CallQueuesTemplate>
                                <DataTemplate>
                                    <views:CallQueuesView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.CallQueuesTemplate>
                            <converters:PageTemplateSelector.AutoAttendantsTemplate>
                                <DataTemplate>
                                    <views:AutoAttendantsView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.AutoAttendantsTemplate>
                            <converters:PageTemplateSelector.HolidaysTemplate>
                                <DataTemplate>
                                    <views:HolidaysView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.HolidaysTemplate>
                            <converters:PageTemplateSelector.DocumentationTemplate>
                                <DataTemplate>
                                    <views:DocumentationView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.DocumentationTemplate>
                            <converters:PageTemplateSelector.WizardTemplate>
                                <DataTemplate>
                                    <views:WizardView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.WizardTemplate>
                            <converters:PageTemplateSelector.BulkOperationsTemplate>
                                <DataTemplate>
                                    <views:BulkOperationsView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.BulkOperationsTemplate>
                        </converters:PageTemplateSelector>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </Grid>
        </Grid>

        <!-- Bottom Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Version -->
                <TextBlock Grid.Column="0" Text="{Binding Version}" VerticalAlignment="Center"/>
                
                <!-- Latest Log Entry - Clickable Log Area -->
                <Button Grid.Column="1" 
                        Command="{Binding ToggleLogDialogCommand}"
                        Background="Transparent"
                        Margin="16,0"
                        Padding="12,8"
                        HorizontalAlignment="Stretch"
                        ToolTip.Tip="Click to view full log"
                        AutomationProperties.Name="Latest Log Entry. Click to view full log.">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <fi:SymbolIcon Grid.Column="0" 
                                  FontSize="16"
                                  Symbol="Code"
                                  Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                  
                                  VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                 Text="{Binding LatestLogEntry}" 
                                 TextTrimming="CharacterEllipsis" 
                                 VerticalAlignment="Center"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                        <fi:SymbolIcon Grid.Column="2" 
                                  FontSize="14"
                                  Symbol="ChevronRight"
                                  Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                  Margin="8,0,0,0"
                                  Opacity="0.6"
                                  VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
                <!-- Copyright -->
                <TextBlock Grid.Column="2" Text="{Binding Copyright}" VerticalAlignment="Center" Opacity="0.7"/>
            </Grid>
        </Border>

        <!-- Log Viewer Dialog - Border overlay -->
        <Border Grid.RowSpan="3"
                IsVisible="{Binding IsLogDialogOpen}"
                Background="#80000000"
                ZIndex="1000"
                PointerPressed="LogDialogBackdrop_PointerPressed">
            <Border.Styles>
                <Style Selector="Border">
                    <Style.Animations>
                        <Animation Duration="0:0:0.2">
                            <KeyFrame Cue="0%">
                                <Setter Property="Opacity" Value="0"/>
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="Opacity" Value="1"/>
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Border.Styles>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                  PointerPressed="LogDialogCard_PointerPressed">
                <Border Background="{DynamicResource SolidBackgroundFillColorBase}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="16" MaxWidth="1000" MaxHeight="600" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Dialog Header -->
                        <Border Grid.Row="0" Classes="header" Padding="16">
                            <DockPanel LastChildFill="False">
                                <TextBlock Text="Log Viewer" 
                                         
                                         FontWeight="SemiBold"
                                         Foreground="White"
                                         VerticalAlignment="Center"/>
                                <Button DockPanel.Dock="Right" 
                                        Background="Transparent"
                                        Foreground="White"
                                        Command="{Binding CloseLogDialogCommand}"
                                        Width="40"
                                        Height="40"
                                        Classes="IconOnly"
                                        AutomationProperties.Name="Close Log Viewer"
                                        ToolTip.Tip="Close">
                                    <fi:SymbolIcon 
                                             Symbol="Dismiss"
                                             Foreground="White"/>
                                </Button>
                            </DockPanel>
                        </Border>
                        
                        <!-- Log Content -->
                        <ScrollViewer x:Name="LogScrollViewer"
                                    Grid.Row="1"
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Auto"
                                    Margin="16">
                            <TextBox x:Name="LogView"
                                   Text="{Binding AllLogEntriesText, Mode=OneWay}"
                                   TextWrapping="NoWrap"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   IsReadOnly="True"
                                   AcceptsReturn="True"
                                   AcceptsTab="True"
                                   Padding="8"
                                   VerticalContentAlignment="Top"
                                   TextChanged="LogView_TextChanged">
                                <TextBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Clear Log" 
                                                Command="{Binding ClearLogCommand}"/>
                                    </ContextMenu>
                                </TextBox.ContextMenu>
                            </TextBox>
                        </ScrollViewer>
                        
                        <!-- Dialog Footer -->
                        <StackPanel Grid.Row="2" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Right"
                                   Margin="16,8,16,16"
                                   Spacing="16">
                            <Button Command="{Binding ClearLogCommand}"
                                    Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon FontSize="16"
                                             Symbol="Delete"
                                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                             />
                                    <TextBlock Text="Clear Log" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding CloseLogDialogCommand}"
                                    Classes="IconText">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon FontSize="16"
                                             Symbol="Dismiss"
                                             Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                             />
                                    <TextBlock Text="Close" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Settings Side Panel -->
        <!-- Overlay backdrop -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                IsVisible="{Binding IsSettingsOpen}"
                ZIndex="1000"
                PointerPressed="SettingsOverlay_PointerPressed">
            <Border.Styles>
                <Style Selector="Border">
                    <Style.Animations>
                        <Animation Duration="0:0:0.2">
                            <KeyFrame Cue="0%">
                                <Setter Property="Opacity" Value="0"/>
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="Opacity" Value="1"/>
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Border.Styles>
        </Border>
        
        <!-- Side panel -->
        <Border Grid.RowSpan="3"
                Background="{DynamicResource SolidBackgroundFillColorBase}"
                Width="400"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                IsVisible="{Binding IsSettingsOpen}"
                ZIndex="1001"
                ClipToBounds="True"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Classes="header" Padding="24,16">
                    <DockPanel LastChildFill="False">
                        <TextBlock Text="Settings" 
                                 FontSize="18"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 VerticalAlignment="Center"/>
                        <Button DockPanel.Dock="Right" 
                                Background="Transparent"
                                Foreground="White"
                                Command="{Binding CloseSettingsCommand}"
                                Width="36"
                                Height="36"
                                Classes="IconOnly"
                                AutomationProperties.Name="Close Settings"
                                ToolTip.Tip="Close">
                            <fi:SymbolIcon 
                                     Symbol="Dismiss"
                                     Foreground="White"/>
                        </Button>
                    </DockPanel>
                </Border>
                
                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24,20" Spacing="20">

                        <!-- Appearance Section -->
                        <StackPanel Spacing="12">
                            <TextBlock Text="Appearance" 
                                     FontSize="16"
                                     FontWeight="SemiBold"/>

                            <Grid ColumnDefinitions="*,Auto" Margin="0,4,0,0">
                                <TextBlock Grid.Column="0"
                                         Text="Dark Theme" 
                                         VerticalAlignment="Center"/>
                                <ToggleSwitch Grid.Column="1"
                                            IsChecked="{Binding IsDarkTheme}"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <Border Height="1" Background="{DynamicResource CardStrokeColorDefaultBrush}"/>

                        <!-- Workflow Section -->
                        <StackPanel Spacing="12">
                            <TextBlock Text="Workflow" 
                                     FontSize="16"
                                     FontWeight="SemiBold"/>

                            <Grid ColumnDefinitions="*,Auto" Margin="0,4,0,0">
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Skip Script Preview"/>
                                    <TextBlock Text="Execute without showing the preview dialog"
                                             FontSize="11" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1"
                                            IsChecked="{Binding SkipScriptPreview}"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"/>
                            </Grid>

                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Skip Delete Confirmation"/>
                                    <TextBlock Text="Remove items without a confirmation dialog"
                                             FontSize="11" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1"
                                            IsChecked="{Binding SkipDeleteConfirmation}"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"/>
                            </Grid>

                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Auto-Refresh After Operations"/>
                                    <TextBlock Text="Reload lists after creating or removing items"
                                             FontSize="11" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1"
                                            IsChecked="{Binding AutoRefreshAfterOperations}"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>

                        <Border Height="1" Background="{DynamicResource CardStrokeColorDefaultBrush}"/>

                        <!-- Logging Section -->
                        <StackPanel Spacing="12">
                            <TextBlock Text="Logging" 
                                     FontSize="16"
                                     FontWeight="SemiBold"/>

                            <Grid ColumnDefinitions="*,Auto" Margin="0,4,0,0">
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="Minimum Log Level"/>
                                    <TextBlock Text="Filter entries shown in the log viewer"
                                             FontSize="11" Opacity="0.6" TextWrapping="Wrap"/>
                                </StackPanel>
                                <ComboBox Grid.Column="1"
                                        SelectedIndex="{Binding SelectedLogLevelIndex}"
                                        MinWidth="110"
                                        Margin="12,0,0,0"
                                        VerticalAlignment="Center">
                                    <ComboBoxItem Content="Info"/>
                                    <ComboBoxItem Content="Warning"/>
                                    <ComboBoxItem Content="Error"/>
                                    <ComboBoxItem Content="Success"/>
                                </ComboBox>
                            </Grid>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
