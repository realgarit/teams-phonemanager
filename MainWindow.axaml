<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:material="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
        xmlns:materialDialogs="clr-namespace:Material.Dialog;assembly=Material.Avalonia.Dialogs"
        xmlns:materialDialogViews="clr-namespace:Material.Dialog.Views;assembly=Material.Avalonia.Dialogs"
        xmlns:materialStyles="clr-namespace:Material.Styles;assembly=Material.Styles"
        xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        xmlns:local="clr-namespace:teams_phonemanager"
        xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
        xmlns:converters="clr-namespace:teams_phonemanager.Converters"
        xmlns:views="clr-namespace:teams_phonemanager.Views"
        xmlns:services="clr-namespace:teams_phonemanager.Services"
        mc:Ignorable="d"
        x:Class="teams_phonemanager.MainWindow"
        Title="Teams Phone Manager" 
        Height="720" 
        Width="1280"
        FontWeight="Medium"
        FontSize="14">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>


    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <material:ColorZone Mode="PrimaryMid" Grid.Row="0" Padding="16">
            <DockPanel LastChildFill="False">
                <TextBlock Text="Teams Phone Manager" 
                         Classes="headline6" 
                         VerticalAlignment="Center"/>
                <Button x:Name="SettingsButton"
                        DockPanel.Dock="Right" 
                        Classes="icon"
                        Command="{Binding ToggleSettingsCommand}"
                        Foreground="White">
                    <materialIcons:MaterialIcon Kind="Settings" Width="24" Height="24"/>
                </Button>
            </DockPanel>
        </material:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <material:Card Grid.Column="0" Margin="16" CornerRadius="8">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,8">
                        <!-- Main Navigation Section -->
                        <Button Classes="flat" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="Welcome"
                               Height="48"
                               Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="Home" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Welcome" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Classes="flat" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="GetStarted"
                               Height="48"
                               Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="PlayCircle" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Get Started" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Variables Section -->
                        <Separator Margin="16,16,16,8"/>
                        <TextBlock Text="VARIABLES" 
                                 Margin="16,0,16,8" 
                                 FontSize="12"
                                 Opacity="0.7"/>

                        <Button Classes="flat" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="Variables"
                               Height="48"
                               Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="Variable" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Variables" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Voice Configuration Section -->
                        <Separator Margin="16,16,16,8"/>
                        <TextBlock Text="VOICE CONFIGURATION" 
                                 Margin="16,0,16,8" 
                                 FontSize="12"
                                 Opacity="0.7"/>

                        <Button Classes="flat" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="M365Groups"
                               Height="48"
                               Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="AccountGroup" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="M365 Groups" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Classes="flat" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="CallQueues"
                               Height="48"
                               Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="Phone" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Call Queues" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Classes="flat" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="AutoAttendants"
                               Height="48"
                               Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="PhoneInTalk" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Auto Attendants" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button Classes="flat" 
                               Command="{Binding NavigateToCommand}" 
                               CommandParameter="Holidays"
                               Height="48"
                               Margin="0,4">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon Kind="Calendar" Margin="0,0,12,0" Width="24" Height="24"/>
                                <TextBlock Text="Holidays" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </material:Card>

            <!-- Content Area -->
            <Grid Grid.Column="1" Margin="16">
                <ContentControl Content="{Binding CurrentPage}">
                    <ContentControl.ContentTemplate>
                        <converters:PageTemplateSelector>
                            <converters:PageTemplateSelector.WelcomeTemplate>
                                <DataTemplate>
                                    <views:WelcomeView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.WelcomeTemplate>
                            <converters:PageTemplateSelector.GetStartedTemplate>
                                <DataTemplate>
                                    <views:GetStartedView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.GetStartedTemplate>
                            <converters:PageTemplateSelector.VariablesTemplate>
                                <DataTemplate>
                                    <views:VariablesView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.VariablesTemplate>
                            <converters:PageTemplateSelector.M365GroupsTemplate>
                                <DataTemplate>
                                    <views:M365GroupsView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.M365GroupsTemplate>
                            <converters:PageTemplateSelector.CallQueuesTemplate>
                                <DataTemplate>
                                    <views:CallQueuesView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.CallQueuesTemplate>
                            <converters:PageTemplateSelector.AutoAttendantsTemplate>
                                <DataTemplate>
                                    <views:AutoAttendantsView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.AutoAttendantsTemplate>
                            <converters:PageTemplateSelector.HolidaysTemplate>
                                <DataTemplate>
                                    <views:HolidaysView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.HolidaysTemplate>
                        </converters:PageTemplateSelector>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </Grid>
        </Grid>

        <!-- Bottom Bar -->
        <material:ColorZone Mode="Standard" Grid.Row="2" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Version -->
                <TextBlock Grid.Column="0" Text="{Binding Version}" VerticalAlignment="Center"/>
                
                <!-- Latest Log Entry - Clickable Log Area -->
                <Button Grid.Column="1" 
                        Command="{Binding ToggleLogDialogCommand}"
                        Classes="flat"
                        Margin="16,0"
                        Padding="12,8"
                        HorizontalAlignment="Stretch"
                        ToolTip.Tip="Click to view full log">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <materialIcons:MaterialIcon Grid.Column="0" 
                                               Kind="Console" 
                                               Width="20" 
                                               Height="20"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                 Text="{Binding LatestLogEntry}" 
                                 TextTrimming="CharacterEllipsis" 
                                 VerticalAlignment="Center"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                        <materialIcons:MaterialIcon Grid.Column="2" 
                                               Kind="ChevronRight" 
                                               Width="16" 
                                               Height="16"
                                               Margin="8,0,0,0"
                                               Opacity="0.6"
                                               VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
                <!-- Copyright -->
                <TextBlock Grid.Column="2" Text="Realgar Â© 2025. MIT License." VerticalAlignment="Center"/>
            </Grid>
        </material:ColorZone>

        <!-- Log Viewer Dialog - Border overlay -->
        <Border Grid.RowSpan="3"
                IsVisible="{Binding IsLogDialogOpen}"
                Background="#80000000"
                ZIndex="1000"
                PointerPressed="LogDialogBackdrop_PointerPressed">
            <Border.Styles>
                <Style Selector="Border">
                    <Style.Animations>
                        <Animation Duration="0:0:0.2">
                            <KeyFrame Cue="0%">
                                <Setter Property="Opacity" Value="0"/>
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="Opacity" Value="1"/>
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Border.Styles>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                  PointerPressed="LogDialogCard_PointerPressed">
                <material:Card Padding="0" Margin="16" MaxWidth="1000" MaxHeight="600">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Dialog Header -->
                        <material:ColorZone Mode="PrimaryMid" Grid.Row="0" Padding="16">
                            <DockPanel LastChildFill="False">
                                <TextBlock Text="Log Viewer" 
                                         Classes="headline6" 
                                         Foreground="White"
                                         VerticalAlignment="Center"/>
                                <Button DockPanel.Dock="Right" 
                                        Classes="icon"
                                        Command="{Binding CloseLogDialogCommand}"
                                        Foreground="White">
                                    <materialIcons:MaterialIcon Kind="Close" Width="24" Height="24"/>
                                </Button>
                            </DockPanel>
                        </material:ColorZone>
                        
                        <!-- Log Content -->
                        <ScrollViewer x:Name="LogScrollViewer"
                                    Grid.Row="1"
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Auto"
                                    Margin="16">
                            <TextBox x:Name="LogView"
                                   Text="{Binding AllLogEntriesText, Mode=OneWay}"
                                   TextWrapping="NoWrap"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   IsReadOnly="True"
                                   AcceptsReturn="True"
                                   AcceptsTab="True"
                                   Padding="8"
                                   TextChanged="LogView_TextChanged">
                                <TextBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Clear Log" 
                                                Command="{Binding ClearLogCommand}"/>
                                    </ContextMenu>
                                </TextBox.ContextMenu>
                            </TextBox>
                        </ScrollViewer>
                        
                        <!-- Dialog Footer -->
                        <StackPanel Grid.Row="2" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Right"
                                   Margin="16,8,16,16">
                            <Button Classes="flat"
                                    Command="{Binding ClearLogCommand}"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialIcons:MaterialIcon Kind="Delete" Margin="0,0,8,0" Width="16" Height="16"/>
                                    <TextBlock Text="Clear Log"/>
                                </StackPanel>
                            </Button>
                            <Button Classes="raised"
                                    Command="{Binding CloseLogDialogCommand}">
                                <TextBlock Text="Close"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </material:Card>
            </Grid>
        </Border>

        <!-- Settings Side Panel -->
        <!-- Overlay backdrop -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                IsVisible="{Binding IsSettingsOpen}"
                ZIndex="1000"
                PointerPressed="SettingsOverlay_PointerPressed">
            <Border.Styles>
                <Style Selector="Border">
                    <Style.Animations>
                        <Animation Duration="0:0:0.2">
                            <KeyFrame Cue="0%">
                                <Setter Property="Opacity" Value="0"/>
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="Opacity" Value="1"/>
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Border.Styles>
        </Border>
        
        <!-- Side panel -->
        <Border Grid.RowSpan="3"
                Background="{DynamicResource MaterialDesignPaper}"
                Width="360"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                IsVisible="{Binding IsSettingsOpen}"
                ZIndex="1001"
                ClipToBounds="True">
            <material:Card Padding="0" Margin="0" CornerRadius="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <material:ColorZone Mode="PrimaryMid" Grid.Row="0" Padding="24">
                        <DockPanel LastChildFill="False">
                            <TextBlock Text="Settings" 
                                     Classes="headline6" 
                                     Foreground="White"
                                     VerticalAlignment="Center"/>
                            <Button DockPanel.Dock="Right" 
                                    Classes="icon"
                                    Foreground="White"
                                    Command="{Binding CloseSettingsCommand}">
                                <materialIcons:MaterialIcon Kind="Close" Width="24" Height="24"/>
                            </Button>
                        </DockPanel>
                    </material:ColorZone>
                    
                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="24">
                            <StackPanel Spacing="8">
                                <TextBlock Text="Appearance" 
                                         Classes="subtitle1"
                                         Margin="0,0,0,8"/>
                                
                                <DockPanel VerticalAlignment="Center">
                                    <TextBlock Text="Dark Theme" 
                                             VerticalAlignment="Center"
                                             Margin="0,0,16,0"/>
                                    <ToggleSwitch DockPanel.Dock="Right" 
                                                IsChecked="{Binding IsDarkTheme}"/>
                                </DockPanel>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </material:Card>
        </Border>
    </Grid>
</Window>

