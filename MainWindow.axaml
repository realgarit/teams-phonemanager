<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fi="using:FluentIcons.Avalonia"
        xmlns:fic="using:FluentIcons.Common"
        xmlns:local="clr-namespace:teams_phonemanager"
        xmlns:viewmodels="clr-namespace:teams_phonemanager.ViewModels"
        xmlns:converters="clr-namespace:teams_phonemanager.Converters"
        xmlns:views="clr-namespace:teams_phonemanager.Views"
        xmlns:services="clr-namespace:teams_phonemanager.Services"
        mc:Ignorable="d"
        x:Class="teams_phonemanager.MainWindow"
        Title="Teams Phone Manager" 
        Height="720" 
        Width="1280">

    <Window.DataContext>
        <viewmodels:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Styles>
        <Style Selector="Border.header">
            <Setter Property="Background" Value="{DynamicResource TeamsPrimaryBrush}"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
        <Style Selector="fi|SymbolIcon">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,-2,0,0"/>
        </Style>
    </Window.Styles>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0" Classes="header">
            <DockPanel LastChildFill="False">
                <TextBlock Text="Teams Phone Manager" 
                         FontSize="20"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"
                         Foreground="White"/>
                <Button x:Name="SettingsButton"
                        DockPanel.Dock="Right" 
                        Command="{Binding ToggleSettingsCommand}"
                        Background="Transparent"
                        Foreground="White"
                        Width="40"
                        Height="40">
                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Settings}" FontSize="20"/>
                </Button>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Grid Grid.Column="0" Margin="16,16,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <ListBox x:Name="NavigationListBox" Grid.Column="0" SelectionChanged="NavigationListBox_SelectionChanged">
                    <ListBoxItem Tag="Welcome" VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <PathIcon Width="20" Height="20" VerticalAlignment="Center"
                                      Data="{StaticResource HomeIconPath}"
                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Welcome" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Tag="GetStarted" VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <PathIcon Width="20" Height="20" VerticalAlignment="Center"
                                      Data="{StaticResource RocketIconPath}"
                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Get Started" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Tag="Variables" VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <PathIcon Width="20" Height="20" VerticalAlignment="Center"
                                      Data="{StaticResource CodeIconPath}"
                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Variables" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Tag="M365Groups" VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <PathIcon Width="20" Height="20" VerticalAlignment="Center"
                                      Data="{StaticResource PeopleTeamIconPath}"
                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="M365 Groups" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Tag="CallQueues" VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <PathIcon Width="20" Height="20" VerticalAlignment="Center"
                                      Data="{StaticResource CallInboundIconPath}"
                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Call Queues" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Tag="AutoAttendants" VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <PathIcon Width="20" Height="20" VerticalAlignment="Center"
                                      Data="{StaticResource BotIconPath}"
                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Auto Attendants" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                    
                    <ListBoxItem Tag="Holidays" VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="12">
                            <PathIcon Width="20" Height="20" VerticalAlignment="Center"
                                      Data="{StaticResource CalendarIconPath}"
                                      Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Holidays" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
                
                <Border Grid.Column="1" 
                        Background="Gray"
                        Width="2"
                        Margin="8,0,0,0"
                        Opacity="0.6"/>
            </Grid>

            <!-- Content Area -->
            <Grid Grid.Column="1" Margin="16">
                <ContentControl Content="{Binding CurrentPage}">
                    <ContentControl.ContentTemplate>
                        <converters:PageTemplateSelector>
                            <converters:PageTemplateSelector.WelcomeTemplate>
                                <DataTemplate>
                                    <views:WelcomeView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.WelcomeTemplate>
                            <converters:PageTemplateSelector.GetStartedTemplate>
                                <DataTemplate>
                                    <views:GetStartedView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.GetStartedTemplate>
                            <converters:PageTemplateSelector.VariablesTemplate>
                                <DataTemplate>
                                    <views:VariablesView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.VariablesTemplate>
                            <converters:PageTemplateSelector.M365GroupsTemplate>
                                <DataTemplate>
                                    <views:M365GroupsView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.M365GroupsTemplate>
                            <converters:PageTemplateSelector.CallQueuesTemplate>
                                <DataTemplate>
                                    <views:CallQueuesView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.CallQueuesTemplate>
                            <converters:PageTemplateSelector.AutoAttendantsTemplate>
                                <DataTemplate>
                                    <views:AutoAttendantsView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.AutoAttendantsTemplate>
                            <converters:PageTemplateSelector.HolidaysTemplate>
                                <DataTemplate>
                                    <views:HolidaysView/>
                                </DataTemplate>
                            </converters:PageTemplateSelector.HolidaysTemplate>
                        </converters:PageTemplateSelector>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </Grid>
        </Grid>

        <!-- Bottom Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Version -->
                <TextBlock Grid.Column="0" Text="{Binding Version}" VerticalAlignment="Center"/>
                
                <!-- Latest Log Entry - Clickable Log Area -->
                <Button Grid.Column="1" 
                        Command="{Binding ToggleLogDialogCommand}"
                        Background="Transparent"
                        Margin="16,0"
                        Padding="12,8"
                        HorizontalAlignment="Stretch"
                        ToolTip.Tip="Click to view full log">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <fi:SymbolIcon Grid.Column="0" 
                                       Symbol="{x:Static fic:Symbol.Code}" 
                                       FontSize="16"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                 Text="{Binding LatestLogEntry}" 
                                 TextTrimming="CharacterEllipsis" 
                                 VerticalAlignment="Center"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                        <fi:SymbolIcon Grid.Column="2" 
                                       Symbol="{x:Static fic:Symbol.ChevronRight}" 
                                       FontSize="14"
                                       Margin="8,0,0,0"
                                       Opacity="0.6"
                                       VerticalAlignment="Center"/>
                    </Grid>
                </Button>
                
                <!-- Copyright -->
                <TextBlock Grid.Column="2" Text="Realgar Â© 2025. MIT License." VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Log Viewer Dialog - Border overlay -->
        <Border Grid.RowSpan="3"
                IsVisible="{Binding IsLogDialogOpen}"
                Background="#80000000"
                ZIndex="1000"
                PointerPressed="LogDialogBackdrop_PointerPressed">
            <Border.Styles>
                <Style Selector="Border">
                    <Style.Animations>
                        <Animation Duration="0:0:0.2">
                            <KeyFrame Cue="0%">
                                <Setter Property="Opacity" Value="0"/>
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="Opacity" Value="1"/>
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Border.Styles>
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center"
                  PointerPressed="LogDialogCard_PointerPressed">
                <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Margin="16" MaxWidth="1000" MaxHeight="600" Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Dialog Header -->
                        <Border Grid.Row="0" Classes="header" Padding="16">
                            <DockPanel LastChildFill="False">
                                <TextBlock Text="Log Viewer" 
                                         FontSize="20"
                                         FontWeight="SemiBold"
                                         Foreground="White"
                                         VerticalAlignment="Center"/>
                                <Button DockPanel.Dock="Right" 
                                        Background="Transparent"
                                        Foreground="White"
                                        Command="{Binding CloseLogDialogCommand}"
                                        Width="40"
                                        Height="40">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Dismiss}" FontSize="20"/>
                                </Button>
                            </DockPanel>
                        </Border>
                        
                        <!-- Log Content -->
                        <ScrollViewer x:Name="LogScrollViewer"
                                    Grid.Row="1"
                                    VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Auto"
                                    Margin="16">
                            <TextBox x:Name="LogView"
                                   Text="{Binding AllLogEntriesText, Mode=OneWay}"
                                   TextWrapping="NoWrap"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   IsReadOnly="True"
                                   AcceptsReturn="True"
                                   AcceptsTab="True"
                                   Padding="8"
                                   TextChanged="LogView_TextChanged">
                                <TextBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Clear Log" 
                                                Command="{Binding ClearLogCommand}"/>
                                    </ContextMenu>
                                </TextBox.ContextMenu>
                            </TextBox>
                        </ScrollViewer>
                        
                        <!-- Dialog Footer -->
                        <StackPanel Grid.Row="2" 
                                   Orientation="Horizontal" 
                                   HorizontalAlignment="Right"
                                   Margin="16,8,16,16">
                            <Button Background="Transparent"
                                    Command="{Binding ClearLogCommand}"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <fi:SymbolIcon Symbol="{x:Static fic:Symbol.Delete}" FontSize="16" Margin="0,0,8,0"/>
                                    <TextBlock Text="Clear Log"/>
                                </StackPanel>
                            </Button>
                            <Button Command="{Binding CloseLogDialogCommand}">
                                <TextBlock Text="Close"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Settings Side Panel -->
        <!-- Overlay backdrop -->
        <Border Grid.RowSpan="3"
                Background="#80000000"
                IsVisible="{Binding IsSettingsOpen}"
                ZIndex="1000"
                PointerPressed="SettingsOverlay_PointerPressed">
            <Border.Styles>
                <Style Selector="Border">
                    <Style.Animations>
                        <Animation Duration="0:0:0.2">
                            <KeyFrame Cue="0%">
                                <Setter Property="Opacity" Value="0"/>
                            </KeyFrame>
                            <KeyFrame Cue="100%">
                                <Setter Property="Opacity" Value="1"/>
                            </KeyFrame>
                        </Animation>
                    </Style.Animations>
                </Style>
            </Border.Styles>
        </Border>
        
        <!-- Side panel -->
        <Border Grid.RowSpan="3"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                Width="360"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                IsVisible="{Binding IsSettingsOpen}"
                ZIndex="1001"
                ClipToBounds="True"
                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <Border Grid.Row="0" Classes="header" Padding="24">
                    <DockPanel LastChildFill="False">
                        <TextBlock Text="Settings" 
                                 FontSize="20"
                                 FontWeight="SemiBold"
                                 Foreground="White"
                                 VerticalAlignment="Center"/>
                        <Button DockPanel.Dock="Right" 
                                Background="Transparent"
                                Foreground="White"
                                Command="{Binding CloseSettingsCommand}"
                                Width="40"
                                Height="40">
                            <fi:SymbolIcon Symbol="Dismiss" FontSize="20"/>
                        </Button>
                    </DockPanel>
                </Border>
                
                <!-- Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="24" Spacing="24">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Appearance" 
                                     FontSize="18"
                                     FontWeight="SemiBold"
                                     Margin="0,0,0,8"/>
                            
                            <DockPanel VerticalAlignment="Center">
                                <TextBlock Text="Dark Theme" 
                                         VerticalAlignment="Center"
                                         Margin="0,0,16,0"/>
                                <ToggleSwitch DockPanel.Dock="Right" 
                                            IsChecked="{Binding IsDarkTheme}"/>
                            </DockPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
